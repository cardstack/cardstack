<BoxelModal @onClose={{this.transitionToPrevious}}>
  <header class="item-edit__sticky-header">
    <div>
      <h1 class="item-edit__title">{{humanize @model.song_title}}</h1>
      <h2 class="item-edit__description">Original Recording</h2>
    </div>
    <button {{on "click" this.transitionToPrevious}} class="item-edit__mode-btn mode-indicator mode-indicator--edit">
      Edit mode
    </button>
  </header>

  <div class="item-edit__scroll-container">
    <div class="item-edit__body-plate">
      <MediaDetail @model={{@model}} @mode="edit" />
    </div>
  </div>
</BoxelModal>