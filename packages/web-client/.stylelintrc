{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "dist/**/*.css",
    "node_modules/**/*.css"
  ],
  "rules": {
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": [true, {
      "severity": "warning",
      "ignoreValues": ["string"]
    }],
    "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$"
  }
}
