<CardDropPage::Card>
  <:heading>
    Whoops!
  </:heading>

  <:explanation>
    <p>
      An error occurred attempting to provision a prepaid card.
    </p>

    <p data-test-error-message>
      {{this.message}}
    </p>
  </:explanation>

  <:action>
    <Boxel::Button
      @kind='secondary'
      @as='anchor'
      @href={{config 'urls.mailToSupportUrl'}}
    >
      Contact Cardstack Support
    </Boxel::Button>
  </:action>
</CardDropPage::Card>