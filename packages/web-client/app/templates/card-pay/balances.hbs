<section role="tabpanel" aria-labelledby="card-pay.balances">
  <h2>
    Card Balances
  </h2>

  <Boxel::Button @kind="primary" {{on "click" (set this "isShowingDepositWorkflow" true)}} data-test-deposit-button>
    Deposit
  </Boxel::Button>
</section>

<Boxel::Modal
  @isOpen={{this.isShowingDepositWorkflow}}
  @onClose={{set this "isShowingDepositWorkflow" false}}
>
  <CardPay::DepositWorkflow />
</Boxel::Modal>