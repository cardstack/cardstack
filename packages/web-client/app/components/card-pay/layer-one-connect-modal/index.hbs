<Boxel::Modal
  @isOpen={{@isOpen}}
  @onClose={{@onClose}}
  style={{css-var boxel-modal-max-width="45rem" boxel-modal-offset-top="0px"}}
  class="layer-one-connect-modal"
  data-test-layer-one-connect-modal
>
  <div class="layer-one-connect-modal__scroll-wrapper">
    <CardPay::LayerOneConnectCard
      class="layer-one-connect-modal__card"
      @onComplete={{@onClose}}
      @suppressHeader={{true}}
      @suppressConnectingCard={{true}}
      tabindex="0"
      {{did-insert this.focus}}
    />
  </div>
</Boxel::Modal>