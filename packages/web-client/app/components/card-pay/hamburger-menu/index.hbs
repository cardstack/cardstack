<div ...attributes>
  <button
    type="button"
    class="hamburger-menu__trigger"
    disabled={{@open}}
    {{on "click" (optional @onOpen)}}
  >
    {{svg-jar "hamburger-menu" width="20" height="14"}}
  </button>

  {{#if @open}}
    <nav class="hamburger-menu__wrapping-nav">
      <div class="hamburger-menu__header-container">
        {{yield to="header"}}
        <button type="button" class="hamburger-menu__trigger hamburger-menu__trigger--close" {{on "click" (optional @onClose)}}>
          {{svg-jar "close-thick" width="14" height="14"}}
        </button>
      </div>
      <ul class="hamburger-menu__list">
        {{yield (component "card-pay/hamburger-menu/item") to="body"}}
      </ul>
    </nav>
  {{/if}}
</div>