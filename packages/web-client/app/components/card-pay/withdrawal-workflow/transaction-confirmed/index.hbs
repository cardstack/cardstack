<ActionCardContainer
  @header="Confirmation"
  @isComplete={{@isComplete}}
  data-test-withdrawal-transaction-confirmed-is-complete={{@isComplete}}
>
  <ActionCardContainer::Section @title="You withdrew">
    <CardPay::Bridge::Item
      @isLayer2={{true}}
      @link="#"
      @token={{this.withdrawToken}}
      @amount={{format-token-amount this.withdrawAmount}}
      @preposition="from"
      @walletAddress={{this.layer2Network.walletInfo.firstAddress}}
      @depotAddress={{this.depotAddress}}
      data-test-withdrawal-transaction-confirmed-from
    />
  </ActionCardContainer::Section>
</ActionCardContainer>

<CardPay::Bridge @link="#" />

<ActionCardContainer
  @header="Confirmation"
  @suppressHeader={{true}}
  @isComplete={{@isComplete}}
>
  <ActionCardContainer::Section @title="You received">
    <CardPay::Bridge::Item
      @isLayer1={{true}}
      @link="#"
      @token={{this.receivedToken}}
      @amount={{format-token-amount this.withdrawAmount}}
      @preposition="in"
      @walletAddress={{this.layer1Network.walletInfo.firstAddress}}
      data-test-withdrawal-transaction-confirmed-to
    />
  </ActionCardContainer::Section>
</ActionCardContainer>
