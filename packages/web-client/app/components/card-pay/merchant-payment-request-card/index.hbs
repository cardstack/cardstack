<Boxel::CardContainer
  class="merchant-payment-request-card"
  ...attributes
>
  <div class="merchant-payment-request-card__section merchant-payment-request-card__get-card-wallet">
    <div class="merchant-payment-request-card__card-wallet">
      {{svg-jar "card-wallet-app-icon" class="merchant-payment-request-card__card-wallet-icon" width="40" height="40"}}
      <span class="merchant-payment-request-card__card-wallet-text">
        Card Wallet
      </span>
    </div>
    <a
      class="merchant-payment-request-card__testflight-link"
      href={{this.testFlightLink}}
      target="_blank"
      rel="noopener noreferrer"
      data-test-payment-request-beta-access-link
    >
        Download TestFlight
        {{svg-jar "caret-right-large" class="merchant-payment-request-card__testflight-link-icon"}}
    </a>
   </div>
  <CardPay::MerchantPaymentRequestCard::PaymentRequest
    class="merchant-payment-request-card__section"
    @paymentURL={{@paymentURL}}
    @image={{this.cardstackLogoForQR}}
    @merchant={{@merchant}}
    @amount={{@amount}}
    @usdAmount={{@usdAmount}}
    @canDeepLink={{@canDeepLink}}
  />
</Boxel::CardContainer>