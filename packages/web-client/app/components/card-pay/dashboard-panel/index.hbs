<details open class="dashboard-details-container" ...attributes>
  <summary class="dashboard-details-container__summary">
    <div class="dashboard-details-container__marker">
      {{svg-jar "caret-right" class="dashboard-details-container__marker-icon" role="presentation"}}
    </div>
  </summary>
  <section class="dashboard-panel">
    <header class="dashboard-panel__header">
      <h2 class="dashboard-panel__header-title">{{@panel.title}}</h2>
      <p class="dashboard-panel__header-desc">{{@panel.description}}</p>
    </header>
    {{#if @panel.heroImageUrl}}
      <div
        class="dashboard-panel__hero"
        style={{css-url "background-image" @panel.heroImageUrl}}
      />
    {{/if}}

    {{yield}}
  </section>
</details>