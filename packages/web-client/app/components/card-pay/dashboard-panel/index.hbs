<details open class="dashboard-details-container" ...attributes>
  <summary class="dashboard-details-container__summary">
    <div class="dashboard-details-container__marker">
      {{svg-jar "caret-right" class="dashboard-details-container__marker-icon" role="presentation"}}
    </div>
  </summary>
  <section class="dashboard-panel">
    <header class="dashboard-panel__header">
      <h3 class="dashboard-panel__header-title">{{@title}}</h3>
      <p class="dashboard-panel__header-desc">{{@description}}</p>
    </header>
    {{#if @heroImageUrl}}
      <div
        class="dashboard-panel__hero"
        style={{css-url "background-image" @heroImageUrl}}
      />
    {{/if}}
    {{#each @sections as |section i|}}
      <CardPay::DashboardPanel::Section
        @icon={{section.icon}}
        @title={{section.title}}
        @description={{section.description}}
        @bullets={{section.bullets}}
        @cta={{section.cta}}
        @isCtaDisabled={{section.isCtaDisabled}}
        @footnote={{section.footnote}}
        @ctaAction={{get @ctaActions i}}
      />
    {{/each}}
  </section>
</details>