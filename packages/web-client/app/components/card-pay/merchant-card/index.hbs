<article class="merchant-card" data-test-merchant-card={{@id}} ...attributes>
  <header class="merchant-card__header">
    <div class="merchant-card__header-network">on {{@network}}</div>
    <div class="merchant-card__header-address">{{truncate-middle @safe.address}}</div>
  </header>
  <section class="merchant-card__content">
    <CardPay::Merchant
      @size="large"
      @vertical={{true}}
      @name={{@name}}
      @logoBackground={{@logoBackground}}
      @logoTextColor={{@logoTextColor}}
      @text="Business Account"
    />
    <div class="merchant-card__info">
      <div>
        <div class="merchant-card__label">Business ID</div>
        <div class="merchant-card__value" title={{@id}}>{{@id}}</div>
      </div>
      <div>
        <span class="merchant-card__value">{{@managerCount}}</span>
        {{if (eq @managerCount 1) "Manager" "Managers"}}
        {{svg-jar "user-avatar" width="16" height="14" class="merchant-card__manager-icon"}}
      </div>
    </div>
  </section>
</article>