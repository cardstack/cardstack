<div class='safe-option' ...attributes>
  {{#if this.data.icon}}
    {{svg-jar this.data.icon width='20' height='20' class='safe-option__logo'}}
  {{else}}
    <CardPay::ProfileLogo
      class='safe-option__logo'
      @name={{first-char this.data.info.name}}
      @logoBackground={{this.data.info.backgroundColor}}
      @logoTextColor={{this.data.info.textColor}}
    />
  {{/if}}
  {{#if @showSafeId}}
    <div class='safe-option__name-and-type'>
      <span class='safe-option__name'>
        {{this.data.info.name}}
      </span>
    </div>
    <div class='safe-option__id'>
      {{this.data.info.id}}
    </div>
  {{else}}
    <div class='safe-option__name-and-type'>
      <span class='safe-option__name'>
        {{this.data.info.name}}
      </span>
      {{#if this.data.type}}
        <span class='safe-option__type'>
          {{this.data.type}}
        </span>
      {{/if}}
    </div>
    <div class='safe-option__address'>
      {{@safe.address}}
    </div>
  {{/if}}
</div>