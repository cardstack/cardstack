<div class='merchant-option'>
  <CardPay::MerchantLogo
    class='merchant-option__logo'
    @name={{first-char this.info.name}}
  />
  <div class='merchant-option__name-and-type'>
    <span class='merchant-option__name'>{{this.info.name}}</span>
    <span class='merchant-option__type'>Merchant account</span>
  </div>
  <div class='merchant-option__address'>{{@safe.address}}</div>
</div>