<div class="card-pay-header-connection-button__label">
  {{@chainName}}
</div>
<Boxel::Button
  @kind={{if @isConnected "secondary-dark" "primary"}}
  class={{cn
    "card-pay-header-connection-button__button"
    card-pay-header-connection-button__button--connected=@isConnected
  }}
  {{on "click" @onConnect}}
  data-test-card-pay-connect-button
>
  {{#if @isConnected}}
    {{truncate-middle @address 7 4}}
  {{else}}
    Connect Wallet
  {{/if}}
</Boxel::Button>
