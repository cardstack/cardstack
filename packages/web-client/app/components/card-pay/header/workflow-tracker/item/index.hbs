<button
  class='workflow-tracker-item__container'
  type='button'
  disabled={{if this.isComplete 'disabled'}}
  {{on 'click' this.visit}}
>
  <heading class='workflow-tracker-item__heading'>
    {{this.workflowName}}
  </heading>
  <span class='workflow-tracker-item__milestone'>
    {{#if this.isComplete}}
      Complete
    {{else}}
      {{this.currentMilestoneTitle}}
    {{/if}}
  </span>

  <Boxel::ProgressIcon
    class='workflow-tracker-item__icon'
    @size="20"
    @isComplete={{this.isComplete}}
    @fractionComplete={{this.fractionComplete}}
  />
</button>
