<Boxel::CardContainer>
  <div data-test-source-token={{@workflowSession.state.depositSourceToken}}>
    Depositing from {{@workflowSession.state.depositSourceToken}}
  </div>
  <Boxel::Input data-test-deposit-amount-input @value={{this.amount}} />
  <Boxel::Button {{on 'click' this.unlock}} data-test-unlock-button @disabled={{this.isUnlockButtonDisabled}}>
    Unlock
  </Boxel::Button>
  <Boxel::Button {{on 'click' this.deposit}} data-test-deposit-button @disabled={{this.isDepositButtonDisabled}}>
    Deposit
  </Boxel::Button>
</Boxel::CardContainer>