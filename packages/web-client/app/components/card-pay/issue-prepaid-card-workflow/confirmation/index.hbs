<ActionCardContainer
  @header="Prepaid card"
  @isComplete={{@isComplete}}
  class="issue-prepaid-card-workflow-confirmation"
>
  <ActionCardContainer::Section
    @icon="success-bordered"
    @title="Prepaid card issued"
  >
    <div class="issue-prepaid-card-workflow-confirmation__card-container">
      <CardPay::PrepaidCard
        @issuerName={{@workflowSession.state.issuerName}}
        @headerBackground={{@workflowSession.state.headerBackground.headerBackground}}
        @headerTheme={{@workflowSession.state.headerTheme.patternUrl}}
        @headerTextColor={{@workflowSession.state.headerBackground.textColor}}
        @headerPatternColor={{@workflowSession.state.headerBackground.patternColor}}
        @mockBalance={{true}}
        @balance="123,456"
        @usdBalance="1,234.56"
        @address={{placeholder-address}}
        @network="xDai Chain"
        class="issue-prepaid-card-workflow-confirmation__card"
      />
    </div>
  </ActionCardContainer::Section>
</ActionCardContainer>