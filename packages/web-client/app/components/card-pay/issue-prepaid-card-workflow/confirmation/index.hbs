<ActionCardContainer
  @header={{@displayName}}
  @isComplete={{@isComplete}}
  class="issue-prepaid-card-workflow-confirmation"
>
  <ActionCardContainer::Section
    @icon="success-bordered"
    @title="Prepaid card issued"
  >
    <div class="issue-prepaid-card-workflow-confirmation__card-container">
      <CardPay::PrepaidCardSafe
        @safe={{@workflowSession.state.prepaidCardSafe}}
        @waitForCustomization={{true}}
        class="issue-prepaid-card-workflow-confirmation__card"
      />
    </div>
  </ActionCardContainer::Section>
</ActionCardContainer>