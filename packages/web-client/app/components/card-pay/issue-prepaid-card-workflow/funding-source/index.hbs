<ActionCardContainer
  @header="Prepaid card funding"
  @isComplete={{@isComplete}}
  data-test-layout-customization-is-complete={{@isComplete}}
>
  <ActionChin @frozen={{@frozen}}
    @state={{if @isComplete "memorialized" "default"}}
    data-test-layout-customization
  >
    <:default as |d|>
      <d.ActionButton
        {{on "click" @onComplete}}
      >
        Continue
      </d.ActionButton>
    </:default>
  </ActionChin>
</ActionCardContainer>