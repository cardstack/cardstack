<ActionCardContainer
  @header="Prepaid card funding"
  @isComplete={{@isComplete}}
>
  <ActionCardContainer::Section>
    <ActionCardContainer::Section @title="Choose a balance to fund your prepaid card">
      <CardPay::LabeledValue @label="DEPOT:" class="funding-source__field">
        <CardPay::NestedItems
          class="funding-source__field-info"
          @innerClass={{unless @isComplete "funding-source__nested-field"}}
        >
          <:outer>
            {{!-- TODO: display account avatar and name if available --}}
            <CardPay::IssuePrepaidCardWorkflow::FundingSource::Account
              @isComplete={{@isComplete}}
              @icon="avatar-default"
              @title="Account 1"
              @address={{this.layer2Network.walletInfo.firstAddress}}
            />
          </:outer>
          <:inner>
            <CardPay::IssuePrepaidCardWorkflow::FundingSource::Account
              @isComplete={{@isComplete}}
              @icon="depot"
              @title="DEPOT:"
              @address={{this.fetchDepotTask.last.value.address}}
              @inner={{true}}
            />
          </:inner>
        </CardPay::NestedItems>
      </CardPay::LabeledValue>
    </ActionCardContainer::Section>
    <ActionCardContainer::Section>
      <CardPay::LabeledValue @label="BALANCE:" class="funding-source__field">
        <CardPay::NestedItems
          class="funding-source__field-info"
          @innerClass={{unless @isComplete "funding-source__nested-field"}}
        >
          <:outer>
            <CardPay::IssuePrepaidCardWorkflow::FundingSource::Account
              @isComplete={{@isComplete}}
              @icon="depot"
              @title="DEPOT:"
              @address={{this.fetchDepotTask.last.value.address}}
            />
          </:outer>
          <:inner>
            {{#if @isComplete}}
              <CardPay::IssuePrepaidCardWorkflow::FundingSource::Account
                @isComplete={{@isComplete}}
                @icon={{this.selectedToken.icon}}
                @balance={{this.selectedToken.balance}}
                @symbol={{this.selectedToken.symbol}}
              />
            {{else}}
              <PowerSelect
                class="funding-source__dropdown"
                @options={{this.tokens}}
                @selected={{this.selectedToken}}
                @onChange={{this.chooseSource}}
                @renderInPlace={{true}}
                @verticalPosition="below"
              as |token|>
                <CardPay::IssuePrepaidCardWorkflow::FundingSource::Account
                  class={{cn "funding-source__dropdown-option" (if (eq token.symbol this.selectedToken.symbol) "funding-source__dropdown-option--selected")}}
                  @isComplete={{@isComplete}}
                  @icon={{token.icon}}
                  @balance={{token.balance}}
                  @symbol={{token.symbol}}
                />
              </PowerSelect>
            {{/if}}
          </:inner>
        </CardPay::NestedItems>
      </CardPay::LabeledValue>
    </ActionCardContainer::Section>
  </ActionCardContainer::Section>
  <Boxel::ActionChin
    @state={{if @isComplete "memorialized" "default"}}
    @disabled={{@frozen}}
  >
    <:default as |d|>
      <d.ActionButton
        {{on "click" @onComplete}}
        @disabled={{not this.selectedToken}}
      >
        Continue
      </d.ActionButton>
    </:default>
    <:memorialized as |m|>
      <m.ActionButton {{on "click" @onIncomplete}}>
        Edit
      </m.ActionButton>
    </:memorialized>
  </Boxel::ActionChin>
</ActionCardContainer>