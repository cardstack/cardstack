<label
  class={{cn
    "face-value-option"
    face-value-option--checked=@checked
    face-value-option--disabled=@disabled
  }}
  data-test-face-value-option={{@spendFaceValue}}
  data-test-face-value-option-checked={{@checked}}
  data-test-face-value-option-disabled={{@disabled}}
>
  <Input
    name="funding-amount"
    class={{cn "face-value-option__input" face-value-option__input--checked=@checked}}
    @type="radio"
    @checked={{@checked}}
    disabled={{@disabled}}
    {{on "input" @onInput}}
  />
  <div class="face-value-option__value">
    {{svg-jar "spend" width="20" height="20" role="presentation"}}
    <div class="face-value-option__amount">
      §{{@spendFaceValue}} SPEND
    </div>
    <div class="face-value-option__conversion">
      ${{@usdAmount}} USD
    </div>
    <div class="face-value-option__conversion">
      ≈ {{@approxTokenAmount}} {{@tokenSymbol}}*
    </div>
  </div>
</label>