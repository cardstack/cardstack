<div class="account-display" ...attributes>
  {{#if @balance}}
    {{#if @isComplete}}
      {{svg-jar @icon class="account-display__icon" role="presentation"}}
      <div>
        <div class="account-display__title-lg">
          {{format-token-amount @balance}} {{uppercase @symbol}}.CPXD
        </div>
      </div>
    {{else}}
      {{svg-jar @icon class="account-display__icon-sm" role="presentation"}}
      <div>
        <div class="account-display__title-sm">{{uppercase @symbol}}.CPXD</div>
        <div class="account-display__text-sm">
          {{format-token-amount @balance}} {{uppercase @symbol}}.CPXD
        </div>
      </div>
    {{/if}}
  {{else}}
    {{#if @isComplete}}
      {{#if @inner}}
        {{svg-jar @icon class="account-display__icon" role="presentation"}}
        <div>
          <div class="account-display__title-lg">{{@title}}</div>
          <div class="account-display__text account-display__address-wrapped">
            {{@address}}
          </div>
        </div>
      {{else}}
        {{svg-jar @icon class="account-display__icon-sm" role="presentation"}}
        <div>
          <div class="account-display__title-sm">{{@title}}</div>
          <div class="account-display__text-sm account-display__address account-display__text--outer">
            {{truncate-middle @address 7 4}}
          </div>
        </div>
      {{/if}}
    {{else}}
      {{#if @inner}}
        {{svg-jar @icon class="account-display__icon" role="presentation"}}
        <div>
          <div class="account-display__title">{{@title}}</div>
          <div class="account-display__text account-display__address">
            {{#if @address}}
              {{@address}}
            {{else}}
              <Boxel::LoadingIndicator />
            {{/if}}
          </div>
        </div>
      {{else}}
        {{svg-jar @icon class="account-display__icon" role="presentation"}}
        <div>
          <div class="account-display__title">{{@title}}</div>
          <div class="account-display__text account-display__address account-display__text--outer">
            {{#if @address}}
              {{@address}}
            {{else}}
              <Boxel::LoadingIndicator />
            {{/if}}
          </div>
        </div>
      {{/if}}
    {{/if}}
  {{/if}}
</div>