<div class="token-amount-input-group" ...attributes>
  {{svg-jar @icon class="token-amount-input-group__icon" role="presentation"}}
  <Boxel::Input
    class="token-amount-input-group__input"
    @id={{@id}}
    @value={{@value}}
    @required={{true}}
    @onInput={{@onInput}}
    @invalid={{@invalid}}
    @errorMessage={{@errorMessage}}
    @disabled={{@disabled}}
    placeholder="0.00"
    autocomplete="off"
    inputmode="decimal"
    {{on "blur" (fn @onInput @value)}}
    data-test-token-amount-input
  />
  <div class="token-amount-input-group__symbol">
    {{@symbol}}
  </div>
</div>
