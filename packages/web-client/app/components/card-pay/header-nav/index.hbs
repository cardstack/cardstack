<nav class="card-pay-header-nav">
  <div class="card-pay-header-nav__list" role="tablist">
    {{#each @tabs as |tab i|}}
      <LinkTo role="tab" id={{tab.route}} @route={{tab.route}} class="card-pay-header-nav__tab" data-test-card-pay-header-tab={{i}}>
        {{svg-jar tab.icon aria-hidden="true"}}
        {{tab.title}}
      </LinkTo>
    {{/each}}
  </div>
</nav>