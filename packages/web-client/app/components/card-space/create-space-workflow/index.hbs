{{#unless this.isInitializing}}
  <WorkflowThread
    class="create-space-workflow"
    @workflow={{this.workflow}}
    @onClose={{@onClose}}
  />
{{/unless}}

{{!-- TODO: remove these and place in a better place when we have solved the Boxel modal layer problem --}}
{{!-- template-lint-disable no-inline-styles --}}
<div id="card-space-image-editor" style="width: 0px; height: 0px; flex-grow: 0;"></div>

<Listener
  @emitter={{this.layer2Network}}
  @event="disconnect"
  @action={{this.onDisconnect}}
/>
<Listener
  @emitter={{this.layer2Network}}
  @event="account-changed"
  @action={{this.onAccountChanged}}
/>


{{#unless this.workflow.isCanceled}}
  {{!-- CardSpace::ProfileCard --}}
  <ToElsewhere
    @named="sidebar-preview-content"
    @send={{component
      "card-space/profile-card"
      profilePhoto=this.workflow.cardSpaceDetails.profilePhoto
      coverPhoto=this.workflow.cardSpaceDetails.coverPhoto
      name=this.workflow.cardSpaceDetails.name
      host=this.workflow.cardSpaceDetails.host
      category=this.workflow.cardSpaceDetails.category
      description=this.workflow.cardSpaceDetails.description
      buttonText=this.workflow.cardSpaceDetails.buttonText
    }}
    @outsideParams={{hash
      title="Live Preview"
      description="How others will preview your space in the Card Space org"
    }}
  />
{{/unless}}
