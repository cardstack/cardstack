<ActionCardContainer
  @header="Card Space Creation"
  @isComplete={{@isComplete}}
  data-test-card-space-creation-is-complete={{@isComplete}}
>
  <ActionCardContainer::Section @title="Create card space">

    {{#if this.errors}}
      <p>Errors:</p>
      {{#each this.errors as |error|}}
        {{error.source.pointer}}: {{error.detail}}
      {{/each}}
    {{/if}}
  </ActionCardContainer::Section>

  <Boxel::ActionChin
    @state={{this.ctaState}}
    @disabled={{@frozen}}
  >
    <:default as |d|>
      <d.ActionButton
        {{on "click" this.createCardSpace}}
        data-test-card-space-creation-button
      >
        Create Card Space
      </d.ActionButton>
    </:default>

    <:in-progress as |i|>
      <i.ActionButton>
        Creatingâ€¦
      </i.ActionButton>
    </:in-progress>

    <:memorialized as |m|>
      <m.ActionStatusArea>
        Card Space Created
      </m.ActionStatusArea>
    </:memorialized>
  </Boxel::ActionChin>
</ActionCardContainer>
