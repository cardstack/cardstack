<ActionCardContainer
  @header="Badge"
  @isComplete={{@isComplete}}
  data-test-card-space-badge
>
  <ActionCardContainer::Section @title="URL reservation">
    <div class="badge-card__content">
      <div class="badge-card__badge">
        {{svg-jar "card-space-logo-clear-background" class="badge-card__badge-icon" role="presentation"}}
        <div class="badge-card__subdomain">{{@workflowSession.state.subdomain}}</div>
        <div class="badge-card__domain">.{{this.cardSpaceHostnameSuffixUppercase}}</div>
      </div>
      <div class="badge-card__purpose">Card Space name reservation</div>
      <span data-test-full-card-space-domain class="badge-card__full-domain">{{@workflowSession.state.subdomain}}.{{this.cardSpaceHostnameSuffix}}</span>
    </div>
  </ActionCardContainer::Section>
</ActionCardContainer>