<div class="card-space-url-form" {{did-insert this.restoreFromSession}}>
  <CardPay::LabeledValue
    @fieldMode="edit"
    @label="URL"
    data-test-card-space-url-field
  >
    <div class="card-space-url-form__row">
      <div class="card-space-url-form__subdomain">
        <Common::ValidationStateInput
          @state={{this.urlValidationState}}
          @value={{this.subdomain}}
          @onInput={{this.onSubdomainInput}}
          @errorMessage={{this.urlValidationMessage}}
          autocomplete="off"
          autocorrect="off"
          autocapitalize="off"
          spellcheck="false"
          {{on "blur" this.validateUrl}}
        />
      </div>
      <div class="card-space-url-form__domain">
        .card.space
      </div>
    </div>
  </CardPay::LabeledValue>
</div>
