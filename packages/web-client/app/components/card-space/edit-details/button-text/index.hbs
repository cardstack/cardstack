<div class="card-space-url-form">
  <CardPay::LabeledValue
    @label="Button Text"
    data-test-card-space-button-text-field
  >
    <Boxel::CustomRadio
      @groupDescription="Select button text"
      @items={{this.options}}
      data-test-button-text-options
    as |option|>
      <option.component
        @name="deposit-token"
        @checked={{eq this.buttonTextValue option.data}}
        @onChange={{fn this.setButtonTextValue option.data}}
        @fullWidth={{true}}
        data-test-button-text-option
      >
        {{option.data}}
      </option.component>
    </Boxel::CustomRadio>
  </CardPay::LabeledValue>
</div>
