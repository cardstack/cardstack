<div class="card-space-url-form">
  <CardPay::LabeledValue
    @label="Button Text"
    data-test-card-space-button-text-field
  >
    <Boxel::RadioInput
      @groupDescription="Select button text"
      @items={{this.options}}
      @layout="grid"
      data-test-button-text-options
    as |option|>
      {{#let option.data as |text|}}
        <option.component
          @name="button-text"
          @checked={{eq this.buttonTextValue text}}
          @onChange={{fn this.setButtonTextValue text}}
          data-test-button-text-option
        >
          {{text}}
        </option.component>
      {{/let}}
    </Boxel::RadioInput>
  </CardPay::LabeledValue>
</div>
