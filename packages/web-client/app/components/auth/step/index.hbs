<Boxel::CardContainer
  class="auth-step"
  ...attributes
>
  {{#if @header}}
    <header class="auth-step__header">
      {{@header}}
    </header>
  {{/if}}
  {{#if @description}}
    <div class="auth-step__description">
      {{@description}}
    </div>
  {{/if}}
  <div class="auth-step__body">
    {{yield}}
  </div>
</Boxel::CardContainer>
