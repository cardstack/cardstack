<CardPay::PrepaidCard
  class='email-card-drop-success__card'
  @issuerName='Cardstack'
  @headerBackground='linear-gradient(139.27deg, #00EBE5 16%, #C3FC33 100%);'
  @mockBalance={{false}}
  @mockOptions={{false}}
  @balance='2.00'
  @usdBalance='2.00'
  @address={{placeholder-address}}
  @network={{network-display-info 'layer2' 'fullName'}}
/>

<h3 class='email-card-drop-success__heading'>
  Your prepaid card is on its way!
</h3>

<p class='email-card-drop-success__newsletter'>
  Soon you will receive a confirmation email to join our newsletter mailing list.
</p>

<Boxel::Button
  @as='anchor'
  href='https://cardstack.com'
  target='_blank'
  rel='noopener'
>
  Visit Cardstack.com
</Boxel::Button>