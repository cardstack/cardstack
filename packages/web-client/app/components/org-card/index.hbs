<div class="org-card__container">
  <div class="org-card__image" style={{css-url "background-image" @image}} />
  <div class="org-card__content">
    <img class="org-card__icon" src={{@org.icon.url}} alt="" role="presentation">
    <h2 class="org-card__name">{{@org.name}}</h2>
    <span>{{@org.subtitle}}</span>
    {{#if @org.description}}
      <p class="org-card__description">
        {{@org.description}}
        {{#if (and @org.descriptionList @org.descriptionList.length)}}
          <ul class="org-card__description-list">
            {{#each @org.descriptionList as |descriptionListItem|}}
            <li>{{descriptionListItem}}</li>
            {{/each}}
          </ul>
        {{/if}}
      </p>
    {{/if}}
    <Boxel::Button
      class={{cn "org-card__cta" (unless @org.launched "org-card__cta--disabled-link")}}
      @as="link-to"
      @kind="primary"
      @disabled={{not @org.launched}}
      @route={{@route}}
      data-test-cardstack-org-link={{@org.id}}
    >
      {{@org.cta}}
    </Boxel::Button>
  </div>
</div>