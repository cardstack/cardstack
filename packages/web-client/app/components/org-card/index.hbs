<div class="org-card__container">
  <img class="org-card__side-image" src={{@org.sideImage.url}} alt={{@org.sideImage.alt}}>
  <div class="org-card__content">
    <img class="org-card__icon" src={{@org.icon.url}} alt="" role="presentation">
    <h3 class="org-card__name">{{@org.name}}</h3>
    <span>{{@org.subtitle}}</span>
    {{#if @org.description}}
      <span class="org-card__description">
        {{@org.description}}
      </span>
    {{/if}}
    {{#if (and @org.descriptionList @org.descriptionList.length)}}
      <ul class="org-card__description-list">
        {{#each @org.descriptionList as |descriptionListItem|}}
        <li>{{descriptionListItem}}</li>
        {{/each}}
      </ul>
    {{/if}}
  <Boxel::Button class="org-card__cta" @kind="primary" @disabled={{not @org.launched}} {{on "click" (optional @onClickCta)}} data-test-cardstack-dashboard-link={{@org.route}}>{{@org.cta}}</Boxel::Button>
  </div>
</div>