<label
  class={{cn 'radio-option' radio-option--checked=@checked radio-option--disabled=@disabled}}
  data-test-radio-option-checked={{@checked}}
  data-test-radio-option-disabled={{@disabled}}
  ...attributes
>
  <Input
    name={{@name}}
    class={{cn 'radio-option__input' radio-option__input--checked=@checked}}
    @type='radio'
    @checked={{@checked}}
    disabled={{@disabled}}
    {{on 'input' @onInput}}
  />
  {{yield}}
</label>