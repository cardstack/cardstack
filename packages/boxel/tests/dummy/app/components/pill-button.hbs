{{#if @route}}
  <LinkTo @route={{@route}} @models={{if @models @models (array @routeModel)}} @query={{@query}} class="boxel-pill-btn boxel-pill-btn__{{@variant}} {{@class}}" ...attributes>
    {{yield}}
  </LinkTo>
{{else}}
  <button class="boxel-pill-btn boxel-pill-btn__{{@variant}} {{@class}}" ...attributes>
    {{yield}}
  </button>
{{/if}}