{{#if this.isAdding}}
  <div class="collection-add__blank-card-container">
    <div class="collection-field__item collection-field__item--new">
      <div class="boxel collection-add__blank-card">
        <BoxelHighlight @on={{true}} />
        {{component @newItemComponent type="blank-card" format=@format}}
      </div>
    </div>

    <div class="boxel cs-card-select__container" {{did-insert this.focusSearch}}>
      <button class="collection-field__cancel-btn" {{on "click" (fn (mut this.isAdding) false)}}>
        {{svg-jar "close-thick" width="25px" height="25px"}}
      </button>
      <CardSelect
        @search={{@searchFn}}
        @labelPath="title"
        @thumbPath="imgURL"
        @subtitlePath="subtitle"
        @dataSource={{this.dataSource}}
        @component={{@component}}
        @onChange={{this.addItem}} />
    </div>
  </div>
{{else}}
  {{yield}}

  <div class="collection-field__add-btn-container">
    <Boxel::IconButton {{on "click" (fn (mut this.isAdding) true)}} @icon="icon-plus-circle" @variant="primary" />
  </div>
{{/if}}