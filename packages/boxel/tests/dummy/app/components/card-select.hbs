{{! @glint-nocheck: not typesafe yet }}
<div class="cs-card-select">
  <PowerSelectTypeahead
    @placeholder={{or @placeholder "Search"}}
    @selected={{@selected}}
    @search={{@search}}
    @extra={{hash labelPath=@labelPath}}
    @beforeOptionsComponent={{component "card-select/before-options" dataSource=@dataSource}}
    @dropdownClass="cs-card-select--dropdown"
    @initiallyOpened={{true}}
    @renderInPlace={{true}}
    @verticalPosition="below"
    @allowClear={{false}}
    @onChange={{@onChange}} as |item select|>
    <CardSelect::Option
      @item={{item}}
      @select={{select}}
      @component={{@component}}
      @thumbPath={{@thumbPath}}
      @subtitlePath={{@subtitlePath}}
      @labelPath={{@labelPath}} />
  </PowerSelectTypeahead>
</div>

