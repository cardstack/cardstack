<section class="workflow-org workflow-org--{{@model.currentOrg.id}}">
  <aside class="workflow-org__left-edge">
    <Boxel::LeftEdgeNav
      @home={{hash icon="cardstack-logo" action=this.goHome width="33px" height="35px"}}
      @orgs={{@model.userOrgs}}
      @currentOrg={{@model.currentOrg}}
      @onChooseOrg={{this.transitionTo}}
      @user={{hash imgURL=@model.user.imgURL action=(noop)}}
      @bottomActions={{array
        (hash icon="pin" action=(noop))
        (hash icon="card-catalog" action=(noop))
        (hash icon="library" action=(noop))
      }}
    />

    <div class="workflow-org__left-edge-queue">
      <Queue
        @model={{@model}}
        @selectCard={{this.selectCard}}
        @currentCard={{this.currentCard}}
        {{!-- @currentMilestone={{this.currentMilestone}}
        @updateProgress={{this.updateProgress}} --}}
      />
    </div>
  </aside>

  <main class="workflow-org__main">
    {{outlet}}
  </main>
</section>