{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "skipLibCheck": false,
    "traceResolution": false,
    "paths": {
      "fetch": [
        "../../node_modules/ember-fetch"
      ],
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "@cardstack/boxel": [
        "addon"
      ],
      "@cardstack/boxel/*": [
        "addon/*"
      ],
      "@cardstack/boxel/test-support": [
        "addon-test-support"
      ],
      "@cardstack/boxel/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"],
    "transform": {
      "exclude": [
        "addon/components/boxel/apply-changes-toggle/**/*",
        "addon/components/boxel/breadcrumbs/**/*",
        "addon/components/boxel/card-picker/**/*",
        "addon/components/boxel/cover-art/**/*",
        "addon/components/boxel/date-divider/**/*",
        "addon/components/boxel/dropdown-button/**/*",
        "addon/components/boxel/drop-target/**/*",
        "addon/components/boxel/field/**/*",
        "addon/components/boxel/expandable-banner/**/*",
        "addon/components/boxel/icon-button/**/*",
        "addon/components/boxel/infobox/**/*",
        "addon/components/boxel/input/**/*",
        "addon/components/boxel/menu/**/*",
        "addon/components/boxel/milestone-banner/**/*",
        "addon/components/boxel/mode-indicator/**/*",
        "addon/components/boxel/next-steps-box/**/*",
        "addon/components/boxel/progress-circle/**/*",
        "addon/components/boxel/radio-input/**/*",
        "addon/components/boxel/select-button/**/*",
        "addon/components/boxel/selection-control-group/**/*",
        "addon/components/boxel/sort-menu/**/*",
        "addon/components/boxel/styled-qr-code/**/*",
        "addon/components/boxel/tab-bar/**/*",
        "addon/components/boxel/thread/**/*",
        "addon/components/boxel/thread-header/**/*",
        "addon/components/boxel/wave-player/**/*",
        "app/components/**/*",
        "tests/dummy/app/components/boxel/**/*",
        "tests/dummy/app/components/card-select/**/*",
        "tests/dummy/app/components/cards/**/*",
        "tests/dummy/app/components/media-registry/**/*",
        "tests/dummy/app/components/*",
        "tests/integration/**/*",
      ]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*",
  ]
}
