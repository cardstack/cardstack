<div class="boxel-validation-state-input-group" ...attributes>
  <Boxel::Input
    class="boxel-validation-state-input-group__input"
    @id={{@id}}
    @value={{@value}}
    @required={{unless @disabled true}}
    @onInput={{@onInput}}
    @onBlur={{@onBlur}}
    @invalid={{unless @disabled this.isInvalid}}
    @disabled={{@disabled}}
    @errorMessage={{@errorMessage}}
    @helperText={{@helperText}}
    autocomplete="off"
    autocorrect="off"
    autocapitalize="off"
    spellcheck="false"
    data-test-boxel-validation-state-input={{if @disabled true @state}}
  />
  {{#if this.icon}}
    {{svg-jar this.icon class="boxel-validation-state-input-group__icon" role="presentation"}}
  {{/if}}
</div>
