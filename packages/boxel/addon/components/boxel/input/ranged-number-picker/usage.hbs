<Freestyle::Usage @name="Input::RangedNumberPicker">
  <:example>
    <Boxel::Input::RangedNumberPicker
      @min={{this.min}}
      @max={{this.max}}
      @onNumberSelected={{this.logValue}}
      @placeholder={{this.placeholder}}
    />
  </:example>
  <:api as |Args|>
    <Args.Number
      @name="min"
      @description="Minimum number to start range"
      @onInput={{fn (mut this.min)}}
      @value={{this.min}}
    />
    <Args.Number
      @name="max"
      @description="Maximum number to end range"
      @onInput={{fn (mut this.max)}}
      @value={{this.max}}
    />
    <Args.Action
      @name="onNumberSelected"
      @description="Action to call when a number is selected"
    />
    <Args.String
      @name="placeholder"
      @description="The value of the placeholder"
      @value={{this.placeholder}}
      @onInput={{fn (mut this.placeholder)}}
    />
  </:api>
</Freestyle::Usage>