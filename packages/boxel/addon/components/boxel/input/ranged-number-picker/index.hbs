<PowerSelect
  class={{cn
    "boxel-ranged-number-picker-menu"
    boxel-ranged-number-picker-menu--selected=this.selectedNumber
  }}
  @options={{this.rangedNumbers}}
  @selected={{this.selectedNumber}}
  @placeholder={{or @placeholder "Pick Number"}}
  @onChange={{this.setSelectedNumber}}
  @renderInPlace={{true}}
  @dropdownClass="boxel-ranged-number-picker-menu__dropdown"
  @triggerComponent={{@triggerComponent}}
  as |item|
>
  <div class="boxel-ranged-number-picker-menu__item">{{item}}</div>
</PowerSelect>