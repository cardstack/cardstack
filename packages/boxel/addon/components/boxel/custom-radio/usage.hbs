<Freestyle::Usage @name="CustomRadio" @description="A custom radio button component with some accessibility considerations built in">
  <:example>
    <Boxel::CustomRadio @groupDescription={{this.groupDescription}} @items={{this.items}} @checkedId={{this.checkedId}} @disabled={{this.disabled}} as |item|>
      <item.component
        @name="example-radio-usage"
        @checked={{item.checked}}
        @onChange={{fn this.onChange item.data.id}}
        @hiddenInput={{this.hiddenInput}}
      >
        {{item.data.id}}
      </item.component>
    </Boxel::CustomRadio>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="groupDescription"
      @description="Description for this group of radio buttons"
      @value={{this.groupDescription}}
      @onInput={{fn (mut this.groupDescription)}}
      @optional={{true}}
    />
    <Args.Array
      @name="items"
      @description="Items which will be represented by radio buttons. Each should have a unique 'id' attribute."
      @value={{this.items}}
      @onInput={{fn (mut this.items)}}
    />
    <Args.String
      @name="checkedId"
      @description="The id of the currently checked/selected item."
      @value={{this.checkedId}}
      @onInput={{fn (mut this.checkedId)}}
      @optional={{true}}
    />
    <Args.Bool
      @name="disabled"
      @description="Whether selection is disabled."
      @value={{this.disabled}}
      @onInput={{fn (mut this.disabled)}}
      @optional={{true}}
    />
    <Args.Bool
      @name="hiddenInput"
      @description="Visually hides the radio input."
      @value={{this.hiddenInput}}
      @onInput={{fn (mut this.hiddenInput)}}
    />
    <Args.Yield
      @description="Yields an object with the default component to use (CustomRadio::Item), the data for the item passed in, and whether that item is selected"
    />
  </:api>
</Freestyle::Usage>

<Freestyle::Usage @name="CustomRadio::Container" @description="Container/group component for the custom radio button">
  <:example>
    <Boxel::CustomRadio::Container @groupDescription="Example Radio Usage">
      <Boxel::CustomRadio::Item
        id="radio-1"
        @name="radio-usage"
        @checked={{eq this.checkedId2 "radio-1"}}
        @onChange={{fn this.onChange2 "radio-1"}}
      >
        Item 1
      </Boxel::CustomRadio::Item>
      <Boxel::CustomRadio::Item
        id="radio-2"
        @name="radio-usage"
        @checked={{eq this.checkedId2 "radio-2"}}
        @onChange={{fn this.onChange2 "radio-2"}}
      >
        Item 2
      </Boxel::CustomRadio::Item>
    </Boxel::CustomRadio::Container>
  </:example>
  <:api as |Args|>
    <Args.String
      @name="groupDescription"
      @description="Description for this group of radio buttons"
    />
    <Args.Yield @description="Add radio buttons here" />
  </:api>
</Freestyle::Usage>
