<fieldset class="boxel-custom-radio__fieldset" disabled={{@disabled}}>
  <legend class="boxel-custom-radio__group-description">{{@groupDescription}}</legend>
  {{!-- this div is necessary because Chrome has a special case for fieldsets and it breaks grid auto placement --}}
  <div class={{cn
      "boxel-custom-radio__container"
      boxel-custom-radio__container--compact=(eq @spacing "compact")
    }}
    ...attributes
  >
    {{yield}}
  </div>
</fieldset>