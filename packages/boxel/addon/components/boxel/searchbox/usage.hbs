<Freestyle::Usage @name="Searchbox">
  <:example>
    <Boxel::Searchbox
      @id={{this.id}}
      @label={{this.label}}
      @hideIcon={{this.hideIcon}}
      @placeholder={{this.placeholder}}
      @value={{this.value}}
      @onInput={{this.onInput}}
      @onChange={{this.onChange}}
      style={{css-var
        boxel-searchbox-icon-size=this.boxelSearchboxIconSize.value
      }}
    />
  </:example>
  <:api as |Args|>
    <Args.String
      @name="id"
      @description="The id of the searchbox input"
      @value={{this.id}}
      @onInput={{fn (mut this.id)}}
    />
    <Args.String
      @name="label"
      @description="The label of the searchbox input"
      @value={{this.label}}
      @onInput={{fn (mut this.label)}}
    />
    <Args.Bool
      @name="hideIcon"
      @value={{this.hideIcon}}
      @description="when true, hides the search icon"
      @defaultValue={{false}}
      @onInput={{fn (mut this.hideIcon)}}
    />
    <Args.String
      @name="placeholder"
      @description="The placeholder of the searchbox input."
      @value={{this.placeholder}}
      @onInput={{fn (mut this.placeholder)}}
    />
    <Args.String
      @name="value"
      @description="The string entered in the searchbox"
      @value={{this.value}}
      @onInput={{fn (mut this.value)}}
    />
    <Args.Action
      @name="onInput"
      @description="The action called when a user types in the searchbox. Receives the input event"
    />
    <Args.Action
      @name="onChange"
      @description="The action called when a user presses enter in the searchbox."
    />
  </:api>
  <:cssVars as |Css|>
    <Css.Basic
      @name="boxel-searchbox-icon-size"
      @type="dimension"
      @description="The icon size"
      @defaultValue={{this.boxelSearchboxIconSize.defaults}}
      @value={{this.boxelSearchboxIconSize.value}}
      @onInput={{this.boxelSearchboxIconSize.update}}
    />
  </:cssVars>
</Freestyle::Usage>