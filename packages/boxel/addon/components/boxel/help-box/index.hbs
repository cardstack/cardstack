<Boxel::Sidebar::CardContainer class="boxel-help-box" ...attributes>
  <header class="boxel-help-box__title">
    {{svg-jar "help-circle" width="20px" height="20px" aria-hidden="true"}}
    {{or @prompt "Need help?"}}
  </header>
  {{#if (has-block)}}
    <div>
      {{yield}}
    </div>
  {{/if}}
  <Boxel::Button
    @as="anchor"
    @href={{@url}}
    @kind="secondary-light"
    class="boxel-help-box__button"
    target="_blank"
    rel="noopener noreferrer"
  >
    {{or @buttonText "Contact Support"}}
  </Boxel::Button>
</Boxel::Sidebar::CardContainer>