<Freestyle::Usage @name="LeftMainNav">
  <:example>
    <div class="left-main-nav-usage-container">
      <Boxel::LeftEdgeNav
        @home={{
          hash
          icon="cardstack-logo"
          action=this.clickedHome
          width="33px"
          height="35px"
        }}
        @user={{
          hash
          imgURL=this.user.imgURL
          title=this.user.title
          action=this.clickedUser
        }}
        @orgs={{this.orgs}}
        @currentOrg={{this.currentOrg}}
        @onChooseOrg={{this.onChooseOrg}}
        @bottomActions={{
          array
          (hash icon="pin" action=(noop))
          (hash icon="card-catalog" action=(noop))
          (hash icon="library" action=(noop))
        }}
      />

      <Boxel::LeftMainNav
        @org={{this.currentOrg}}
        @items={{array
          (menu-item "Home" (link route="index"))
          (menu-item "LeftMainNav" (link route="docs" query=(hash s="Components" ss="<Boxel::LeftMainNav>")))
          (menu-item "About" (link route="about"))
        }}
        @onSearchChange={{this.onSearchChange}}
        @onSearchInput={{this.onSearchInput}}
      />
    </div>
  </:example>
</Freestyle::Usage>