<Boxel::RadioInput::Container
  @groupDescription={{@groupDescription}}
  @disabled={{@disabled}}
  @spacing={{@spacing}}
  @layout={{@layout}}
  @containerWidth={{@containerWidth}}
  @gridColumnWidth={{@gridColumnWidth}}
  ...attributes
>
  {{#each @items as |item i|}}
    {{yield (hash
      component=(component "boxel/radio-input/item"
        name=@name
        disabled=@disabled
        hiddenCheckbox=@hiddenCheckbox
        hiddenBorder=@hiddenBorder
        checked=(if @checkedId (eq @checkedId item.id))
      )
      data=item
      index=i)}}
  {{/each}}
</Boxel::RadioInput::Container>