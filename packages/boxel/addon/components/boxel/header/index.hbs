<header class={{cn
    "boxel-header"
    boxel-header--no-background=@noBackground
    boxel-header--highlighted=@isHighlighted
  }}
  data-test-boxel-header
  ...attributes
>
  {{#if @header}}
    <span data-test-boxel-header-label>
      {{@header}}
    </span>
  {{/if}}

  <div class="boxel-header__content" data-test-boxel-header-content>
    {{yield}}
  </div>
</header>