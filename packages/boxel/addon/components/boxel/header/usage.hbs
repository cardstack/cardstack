<Freestyle::Usage @name="Header">
  <:description>
    Usually shown at the top of card containers
  </:description>
  <:example>
    <Boxel::Header
      @header={{this.header}}
      @noBackground={{this.noBackground}}
      @isHighlighted={{this.isHighlighted}}
    >
      <:actions>
        <button>Edit</button>
        {{!-- Usage with Boxel::IconButton component --}}
        <Boxel::IconButton
          @icon="more-actions"
          @height="30px"
          aria-label="More Actions"
        />
        <Boxel::IconButton
          @icon="expand"
          @height="30px"
          aria-label="Isolate"
        />
      </:actions>
    </Boxel::Header>
  </:example>
  <:api as |Args|>
    <Args.String
      @name="header"
      @description="Header label text"
      @value={{this.header}}
      @onInput={{fn (mut this.header)}}
    />
    <Args.Bool
      @name="noBackground"
      @description="(styling) Removes background color"
      @defaultValue={{false}}
      @value={{this.noBackground}}
      @onInput={{fn (mut this.noBackground)}}
    />
    <Args.Bool
      @name="isHighlighted"
      @description="(styling) Highlights header"
      @defaultValue={{false}}
      @value={{this.isHighlighted}}
      @onInput={{fn (mut this.isHighlighted)}}
    />
    <Args.Yield
      @description="Content"
    />
  </:api>
</Freestyle::Usage>