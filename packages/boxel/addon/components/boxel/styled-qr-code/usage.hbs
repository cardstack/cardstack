<Freestyle::Usage @name="StyledQrCode" @description="This is a wrapper for qr-code-styling. See the component source + qr-code-styling package documentation to understand available arguments.">
  <:example>
    <Boxel::StyledQrCode
      @data="https://google.com"
      @size={{340}}
      @margin={{15}}
      @backgroundColor="#ffffff"
      @dotType="dots"
      @dotColor="#000"
      @cornerDotType="dot"
      @cornerSquareType="extra-rounded"
      @imageMargin={{5}}
    />
  </:example>
</Freestyle::Usage>

