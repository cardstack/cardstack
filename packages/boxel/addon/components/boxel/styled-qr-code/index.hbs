<div
  class="boxel-styled-qr-code"
  data-test-boxel-styled-qr-code={{@data}}
  ...attributes
>
  <div class="boxel-styled-qr-code__canvas"
    {{did-insert this.generateQrCode}}
    {{did-update this.updateQrCode @data}}
  >

    <Boxel::LoadingIndicator
      class="boxel-styled-qr-code__loading-indicator"
      data-test-boxel-styled-qr-code-loading-indicator
    />
  </div>

  {{#if (has-block)}}
    {{yield}}
  {{/if}}
</div>
