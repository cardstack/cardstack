<Freestyle::Usage @name="Field">
  <:example>
    <Boxel::Field
      @label={{this.label}}
      @fieldId={{this.id}}
      @vertical={{this.vertical}}
      @smallLabel={{this.smallLabel}}
    >
      {{this.value}}
    </Boxel::Field>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="fieldId"
      @description="optional field id"
      @value={{this.id}}
      @onInput={{fn (mut this.id)}}
    />
    <Args.String
      @name="label"
      @description="field label"
      @value={{this.label}}
      @onInput={{fn (mut this.label)}}
    />
    <Args.String
      @name="value"
      @description="text value"
      @value={{this.value}}
      @onInput={{fn (mut this.value)}}
    />
    {{!-- TODO: @address, @icon --}}

    {{!-- TODO: better name --}}
    <Args.Bool
      @name="smallLabel"
      @description="Whether the label column should have a smaller width"
      @defaultValue="false"
      @onInput={{fn (mut this.smallLabel)}}
      @value={{this.smallLabel}}
    />
    <Args.Bool
      @name="vertical"
      @description="Whether the field should be displayed vertically"
      @defaultValue="false"
      @onInput={{fn (mut this.vertical)}}
      @value={{this.vertical}}
    />
    <Args.Yield
      @description="Yield value or form field"
    />
  </:api>
</Freestyle::Usage>