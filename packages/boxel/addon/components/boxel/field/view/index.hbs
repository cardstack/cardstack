{{#let (element (or @tag "div")) as |Tag|}}
  <Tag
    class="boxel-field"
    data-test-boxel-field
    data-test-boxel-field-id={{@fieldId}}
    ...attributes
  >
    <span
      class={{cn "boxel-field__label" (if @labelClass @labelClass)}}
      data-test-boxel-field-label
    >
      {{@label}}
    </span>

    {{yield}}
  </Tag>
{{/let}}