{{#let (element (or @tag "div")) as |Tag|}}
  <Tag
    class={{cn "boxel-field"
      boxel-field--edit=(eq @fieldMode "edit")
      boxel-field--horizontal=(not @vertical)
      boxel-field--small-label=@smallLabel
    }}
    data-test-boxel-field
    data-test-boxel-field-id={{@fieldId}}
    ...attributes
  >
    <div class="boxel-field__label" data-test-boxel-field-label>
      {{@label}}
    </div>
    <div class="boxel-field__contents">
      {{#if @icon}}
        {{svg-jar @icon class="boxel-field__icon" role="presentation"}}
      {{/if}}

      <div>
        {{#if @value}}
          <div class="boxel-field__value">{{@value}}</div>
        {{/if}}

        {{#if @address}}
          <div class="boxel-field__address">{{@address}}</div>
        {{/if}}

        {{#if (has-block)}}
          {{yield}}
        {{/if}}
      </div>
    </div>
  </Tag>
{{/let}}