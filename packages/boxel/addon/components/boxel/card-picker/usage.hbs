<Freestyle::Usage @name="CardPicker">
  <:example>
    <Boxel::CardPicker
      @cards={{this.cards}}
      @chooseCard={{this.chooseCard}}
      @selectedCard={{this.selectedCard}}
    />
  </:example>
  <:api as |Args|>
    <Args.Array
      @name="cards"
      @type="Object"
      @description="Array of cards/objects"
      @items={{this.cards}}
      @onChange={{fn (mut this.cards)}}
      @jsonCollapseDepth={{0}}
    />
    <Args.Object
      @name="selectedCard"
      @description="The card that is currently selected"
      @value={{this.selectedCard}}
      @jsonCollapseDepth={{0}}
      @defaultValue="null"
    />
    <Args.Action
      @name="chooseCard"
      @description="Function to call when a card is selected from the dropdown"
    />
    <Args.String
      @name="cardComponent"
      @description="Card component to use. The default component will loop and display each of the card's fields."
      @defaultValue="boxel/card-picker/card-option"
    />
  </:api>
</Freestyle::Usage>