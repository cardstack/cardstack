<div
  role="tablist"
  class={{cn "boxel-tab-bar" @class boxel-tab-bar--spread=@spread}}
  style={{
    css-var
    boxel-tab-bar-background-color="var(--boxel-tab-bar-background-color)"
    boxel-tab-bar-font="var(--boxel-tab-bar-font)"
  }}
  ...attributes
>
  {{#if this.linkItems}}
    {{#each this.linkItems as |tab|}}
      {{#if tab.inactive}}
        <div
          role="tab"
          data-text={{tab.text}}
          aria-disabled="true"
          class={{
            cn
            "boxel-tab-bar__item"
            "boxel-tab-bar__item--is-inactive"
            boxel-tab-bar__item--is-active=tab.action.isActive
          }}
        >
          {{#if tab.icon}}
            {{svg-jar
              tab.icon
              width=18
              height=18
              data-test-boxel-menu-item-icon=true
            }}
          {{/if}}
          <span class="boxel-tab-bar__item-text">
            {{tab.text}}
          </span>
        </div>
      {{else}}
        {{! template-lint-disable require-context-role }}
        <LinkTo
          id={{or tab.id tab.action.routeName}}
          @route={{tab.action.routeName}}
          @query={{or tab.action.queryParams (hash)}}
          role="tab"
          data-text={{tab.text}}
          class={{
            cn
            "boxel-tab-bar__item"
            "boxel-tab-bar__item"
            boxel-tab-bar__item--is-active=tab.action.isActive
          }}
        >
          {{#if tab.icon}}
            {{svg-jar
              tab.icon
              width=18
              height=18
              data-test-boxel-menu-item-icon=true
            }}
          {{/if}}
          <span class="boxel-tab-bar__item-text">
            {{tab.text}}
          </span>
        </LinkTo>
      {{/if}}
    {{/each}}
  {{/if}}
</div>