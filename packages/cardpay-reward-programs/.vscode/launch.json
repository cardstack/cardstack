  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Reward Program",
      "type": "python",
      "request": "launch",
      "module": "cardpay_reward_programs.main",
      "env": {
        "RULE": "FlatPayment"
      },
      "args": ["./input/flat_payment/parameters.json"]
    },
    {
      "name": "Explore using Streamlit",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${workspaceFolder}/streamlit/explore.py", "--server.port", "8501"]
    }
  ]
}
