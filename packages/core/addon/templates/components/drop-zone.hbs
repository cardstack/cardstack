<div class="drop-zone--container {{this.dropZoneStatus}}">
  <div
    class="drop-zone"
    role="button"
    {{on "drop" (action @dropField @position (fn this.updateStatus "dropped"))}}
    {{on "dragover" (action this.dragOver)}}
    {{on "dragenter" (action this.updateStatus "dragging")}}
    {{on "dragleave" (action this.updateStatus "outside")}}
    data-test-drop-zone={{@position}}
    aria-label="drop zone {{@position}}"
  >
    <div class="drop-zone--description {{this.dropZoneStatus}}">
      <span class="drop-zone--description--text">Drag &amp; drop from the catalog</span>
      <div class="drop-zone--drag-drop-icon">{{svg-jar "drag-drop" width="36px" height="36px"}}</div>
    </div>
  </div>
</div>