{
  "framework": "qunit",
  "test_page": "tests/index.html",
  "browser_args": {
    "Chrome": {
      "mode": "ci",
      "args": [
        "--no-sandbox",
        "--headless",
        "--disable-gpu",
        "--disable-dev-shm-usage",
        "--disable-software-rasterizer",
        "--mute-audio",
        "--remote-debugging-port=0",
        "--window-size=1440,900"
      ]
    }
  },
  "launch_in_dev": ["Chrome"],
  "launch_in_ci": ["Chrome"]
}

