<div class="cardstack-message-card" data-test-message-card>
  <div class="main-content">{{content.comment}}</div>
  <div class="button-panel">
    {{#if content.message.isUnhandled}}
      <button type="button" class="cardstack-action-button" data-test-approve-button onclick={{action 'approve'}}>
        Approve
      </button>
      <button type="button" class="cardstack-action-button" data-test-deny-button onclick={{action 'deny'}}>
        Deny
      </button>
    {{else}}
      {{content.status}}
    {{/if}}
  </div>
</div>