{{#each-in groups as |tagId group|}}
  {{#with (workflow-group-id priority group.name) as |groupId|}}
    <div 
      class={{concat
        "cardstack-workflow-label-with-count-wrapper "
        (if (eq selectedGroup groupId) "active")
      }}
    >
      <div 
        class={{concat 
          "cardstack-workflow-label-with-count "
          group.priorityLevel
          "-priority"
        }}
        onclick={{action onSelect (hash priority=priority tagId=tagId)}}
        role="button"
      >
        <div class="name">{{group.name}}</div>
        {{#if group.unhandled.length}}
          <div class="count" data-test-group-counter={{groupId}}>{{group.unhandled.length}}</div>
        {{/if}}
      </div>
    </div>
  {{/with}}
{{/each-in}}