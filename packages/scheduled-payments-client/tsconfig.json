{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "es2020",
    "experimentalDecorators": true,
    "paths": {
      "@cardstack/scheduled-payments-client/tests/*": ["tests/*"],
      "@cardstack/scheduled-payments-client/*": ["app/*"],
      "@cardstack/boxel/*": ["../boxel/addon/*"],
      "*": ["types/*", "../boxel/types/*"]
    }
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"],
    "transform": {
      "include": ["../boxel/addon/components/boxel/**/*", "app/components/**/*"]
    }
  },
  "include": ["app/**/*", "tests/**/*", "types/**/*"]
}
