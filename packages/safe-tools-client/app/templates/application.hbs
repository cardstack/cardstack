{{page-title 'Cardstack Safe Tools'}}

<Boxel::Dashboard @darkTheme={{true}} class='card-pay'>
  <:header>
    header
    <Boxel::TabBar
      @items={{
        array
        (menu-item 'Schedule' (link route='schedule') icon='calendar')
        (menu-item 'Pay' (link route='pay') icon='tab-icon-split' inactive=true)
        (menu-item
          'Split' (link route='split') icon='tab-icon-split' inactive=true
        )
      }}
      @spread={{true}}
      style={{
        css-var
        boxel-tab-bar-background-color='var(--boxel-dark)'
        boxel-tab-bar-border-bottom='0px'
        boxel-tab-bar-color-active='var(--boxel-cyan)'
        boxel-tab-bar-font='600 var(--boxel-font-sm)'
      }}
    />
  </:header>

  <:body>
    <Boxel::ControlPanel as |cp|>
      {{! FIXME update with true icons }}
      <cp.Item @title='Wallet' @icon='gear' @isActive={{true}}>
        <Boxel::Button @kind='primary'>
          Connect
        </Boxel::Button>
      </cp.Item>
      <cp.Item @title='Network' @icon='pin' />
      <cp.Item @title='Safe' @icon='lock' />
    </Boxel::ControlPanel>
    {{outlet}}
  </:body>
</Boxel::Dashboard>