<header
  class={{cn "action-card__title" action-card__title--flex=(or @icon @imgUrl)}}
  data-test-action-card-title={{@dataTestId}}
  ...attributes
>
  {{#if @icon}}
    {{svg-jar @icon class="action-card__title-icon" width="20" height="20" data-test-action-card-title-icon-name=@icon}}
  {{/if}}

  <div class="action-card__title-content">
    {{yield}}
  </div>

  {{#if @imgUrl}}
    <span style={{css-url "background-image" @imgUrl}} class="action-card__title-img" />
  {{/if}}
</header>