<div class="card-pay-nested-items" ...attributes>
  <div class="card-pay-nested-items__outer">
    {{yield to="outer"}}
  </div>
  <div class={{cn
    "card-pay-nested-items__inner"
    card-pay-nested-items__inner--no-indent=@noIndent
  }}>
    <div class={{unless @noBorder "card-pay-nested-items__inner-content"}}>
      {{yield to="inner"}}
    </div>

    {{#if (has-block "innermost")}}
      <div class={{unless @noInnerBorder "card-pay-nested-items__innermost card-pay-nested-items__inner-content"}}>
        {{yield to="innermost"}}
      </div>
    {{/if}}
  </div>
</div>