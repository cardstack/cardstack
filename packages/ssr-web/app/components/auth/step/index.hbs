<Boxel::CardContainer
  class="auth-step"
  data-test-auth-step
  ...attributes
>
  {{#if @header}}
    <header class="auth-step__header" data-test-auth-step-header>
      {{@header}}
    </header>
  {{/if}}
  {{#if @description}}
    <div class="auth-step__description" data-test-auth-step-description>
      {{@description}}
    </div>
  {{/if}}
  <div class="auth-step__body">
    {{yield}}
  </div>
</Boxel::CardContainer>
