<Boxel::CardContainer
  class="universal-link-card"
  ...attributes
>
    <div class="universal-link-card__section universal-link-card__get-card-wallet">
      <div class='universal-link-card__card-wallet'>
        {{svg-jar
          'card-wallet-app-icon'
          class='universal-link-card__card-wallet-icon'
          width='40'
          height='40'
        }}
        <div class='universal-link-card__card-wallet-text'>
          <span>
            Card Wallet
          </span>
          <span class='universal-link-card__card-wallet-fine-print'>
            by Cardstack
          </span>
        </div>
      </div>
      <Common::CardWalletBadges />
    </div>
    <div class="universal-link-card__section">
      {{yield}}
    </div>
</Boxel::CardContainer>