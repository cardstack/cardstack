{{#if this.notificationShown}}
  {{#if (or (not @size) (eq @size "regular"))}}
    <Common::DegradedServiceBanner::Regular
      @isSevere={{this.isSevere}}
      @title={{this.title}}
      @body={{this.body}}
      ...attributes
    />
  {{else if (eq @size "small")}}
    <Common::DegradedServiceBanner::Small
      @isSevere={{this.isSevere}}
      @title={{this.title}}
      @body={{this.body}}
      ...attributes
    />
  {{/if}}
{{/if}}
