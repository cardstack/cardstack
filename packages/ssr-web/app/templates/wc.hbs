{{#let "Connect with Cardstack Wallet" "Use WalletConnect to connect" (concat "https://" (config "universalLinkDomain") "/wc") as |title description url|}}
  <InHead {{! template-lint-disable-tree no-forbidden-elements }}>
    <meta property='og:image' content={{this.cardPayLogoPng}} />
    <meta name='twitter:image' content={{this.cardPayLogoPng}} />

    <meta property='og:title' content={{title}} />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={{url}} />
    <meta property='og:description' content={{description}} />

    <meta name='twitter:title' content={{title}} />
    <meta name='twitter:card' content='summary' />
    <meta name='twitter:description' content={{description}} />
    <meta name='twitter:url' content={{url}} />
    {{! template-lint-disable no-potential-path-strings }}
    <meta name='twitter:site' content='@cardstack' />
  </InHead>
{{/let}}

<UniversalLinkPage::Layout>
  <UniversalLinkPage::Header/>
  <UniversalLinkPage::Card>
    <div class="wc-message" data-test-wc-message>
      {{svg-jar "warning" class="wc-message__warning-icon"}}
      <p>
        Looks like you're trying to connect with WalletConnect, but we couldn't find Cardstack Wallet on this device.
      </p>
      <p class="wc-message__emphasis">
        Install the app using the links above, or switch to a device with Cardstack Wallet, then retry connecting.
      </p>
    </div>
  </UniversalLinkPage::Card>
  <Common::Footer />
</UniversalLinkPage::Layout>
