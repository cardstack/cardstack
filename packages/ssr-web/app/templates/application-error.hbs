{{!--
  because this page might be shown for non-404 errors unhandled
  by any routes we need to check specifically if this is for
  Card Space before showing a 404.
--}}
{{#if @model.isMissingCardSpace}}
  <div
    class="profile-not-found"
    data-test-profile-not-found
  >
    <div class="profile-not-found__big-404">
      404
    </div>
    <div class="profile-not-found__description">
      We can't find the profile you're looking for
    </div>
    <img
      class="profile-not-found__decorative-image"
      src="/images/illustrations/404-bg.png"
      alt
      role="presentation"
    >
  </div>
{{else}}
  <div data-test-error>
    {{@model.message}}
  </div>
{{/if}}