{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es2020",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@cardstack/ssr-web/tests/*": [
        "tests/*"
      ],
      "@cardstack/ssr-web/*": [
        "app/*"
      ],
      "@cardstack/boxel/*": [
        "../boxel/addon/*"
      ],
      "*": [
        "types/*",
        "../boxel/types/*"
      ],
      "@glimmer/tracking": [
        "../../node_modules/ember-cached-decorator-polyfill",
        "../../node_modules/@glimmer/tracking/dist/types"
      ],
      "@ember/destroyable": ["../../node_modules/ember-destroyable-polyfill"],
      "@cardstack/ssr-web/mirage/*": ["mirage/*"],
      "web3-provider-engine": ["../../types/web3-provider-engine"]
    }
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"],
    "transform": {
      "include": [
        "../boxel/addon/components/boxel/**/*",
        "app/components/profile/**/*",
        "app/components/profile-logo/**/*",
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
    "mirage"
  ]
}
