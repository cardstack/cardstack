<Dialog
  open={{true}}
  @title={{this.title}}
  @mode={{@mode}}
  @icon={{@icon}}
  data-test-card-name-dialog-is-adopted-card={{if @adoptsFrom "true" "false"}}
>
  <BoxelTextField
    @mode="schema"
    @label="Give your card a name"
    @theme="cs-dark"
    placeholder="i.e. My New Card"
    @key-up={{action this.updateCardName}}
    {{on "keydown" this.keyDown}}
    {{autofocus}}
    data-test-card-name
  />
  <div class="dialog--button-group">
    {{#if @closeDialog}}
      <BoxelButton {{on "click" @closeDialog}} @variant="secondary primary" data-test-cancel-create-btn>Cancel</BoxelButton>
    {{/if}}
    <BoxelButton {{on "click" this.createCard}} @variant="primary" data-test-create-card-btn>Create</BoxelButton>
  </div>
</Dialog>