<Form::BoxelTextField
  @mode="edit"
  @id={{@card.name}}
  @label={{or @card.csTitle @card.name}}
  @value={{this.fieldValue}}
  @setValue={{perform this.updateFieldValue}}
  @addAction={{perform this.add}}
  @removeAction={{perform this.remove}}
  @hasPluralArity={{eq @card.csFieldArity "plural"}}
/>