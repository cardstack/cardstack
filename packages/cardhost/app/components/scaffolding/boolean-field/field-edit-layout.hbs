<div class="edit-field boolean-editor" {{did-insert (action this.setChecked)}} data-test-edit-field={{@card.name}}>
  <legend class="edit-field__title">{{or @card.csTitle @card.name}}</legend>
  <div>
    <label>
      <Input
        @id={{concat this.idPrefix "-true"}}
        @type="radio"
        @class="edit-field__radio-checkbox cardstack-core-types-field-value-true"
        @name={{concat "field" this.nonce "-boolean-field-value"}}
        @checked={{this.fieldValue}}
        @click={{perform this.updateFieldValue}}
        @value="true"
      />
      True
    </label>
    <label>
      <Input
        @id={{concat this.idPrefix "-false"}}
        @type="radio"
        @class="edit-field__radio-checkbox cardstack-core-types-field-value-false"
        @name={{concat "field" this.nonce "-boolean-field-value"}}
        @checked={{not this.fieldValue}}
        @click={{perform this.updateFieldValue}}
        @value="false"
      />
      False
    </label>
  </div>
</div>