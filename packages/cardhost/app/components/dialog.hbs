<dialog class="dialog {{@mode}} {{@class}}" data-test-dialog-box ...attributes>
  {{#if @title}}
    <h1 class="dialog--title" data-test-dialog-title>
      {{svg-jar @icon width="20px" height="20px"}} {{@title}}
    </h1>
  {{/if}}
  <div class="dialog--content" data-test-dialog-content>
    {{yield}}
  </div>
</dialog>