<PowerSelectTypeahead
  @placeholder={{or @placeholder "Search"}}
  @selected={{@selected}}
  @search={{@search}}
  @beforeOptionsComponent={{@beforeOptionsComponent}}
  @dropdownClass={{@dropdownClass}}
  @initiallyOpened={{true}}
  @renderInPlace={{or @renderInPlace true}}
  @verticalPosition={{or @verticalPosition "below"}}
  @allowClear={{or @allowClear false}}
  @onChange={{@onChange}} as |card|
>
  <CardSelect::Option
    @component={{@component}}
    @card={{card}}
  />
</PowerSelectTypeahead>