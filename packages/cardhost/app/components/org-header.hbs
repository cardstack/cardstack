{{! template-lint-disable no-inline-styles }}
<header class="org-header org-header--sm org-header--{{@org.id}}" style={{html-safe (concat "background-color:" @org.brandColor)}} data-test-org-header>
  <div class="org-header__title-row">
    <h1 class="org-header__title">
      <span class="org-header__logo org-header__logo--{{@org.id}}" style={{if @org.logoURL (css-url "background-image" @org.logoURL)}} />
      <span>{{@org.title}}</span>
    </h1>
    <label>
      <div class="sr-only">Search</div>
      <input class="org-header__search-bar" type="search" placeholder="Search">
    </label>
  </div>

  <ul class="org-header__nav">
    {{yield}}
  </ul>
</header>