<div
  class="cs-checkbox-group
    {{if @theme (concat @theme "-checkbox-group")}}
    {{@mode}}"
  data-test-cs-component="checkbox"
>
  <Input
    @id={{@id}}
    @type="checkbox"
    @class="cs-checkbox
      {{if @theme (concat @theme "-checkbox")}}
      {{if @checked "checked"}}
      {{if @disabled "disabled"}}
      {{if this.validationMessage "invalid"}}
      {{@mode}}"
    @click={{action "handleInput"}}
    @checked={{@checked}}
    @required={{@required}}
    @disabled={{@disabled}}
    data-test-cs-component-input="checkbox"
    ...attributes />

  <label for={{@id}} data-test-cs-component-label="checkbox">
    <span class="cs-checkbox-group--checkmark"></span>
    {{@label}}
  </label>

  <div
    class="cs-checkbox-group--helper-text {{if this.validationMessage "invalid"}}"
    data-test-cs-component-validation="checkbox">
    {{or this.validationMessage @helperText}}
  </div>
</div>