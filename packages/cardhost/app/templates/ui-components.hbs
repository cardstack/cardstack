  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Card Renderer</h2>
      <h3>Schema mode</h3>
      <CardRenderer
        @card={{this.model}}
        @format="isolated"
        @mode="schema"
        @setPosition={{action this.noop}}
        @removeField={{action this.noop}}
      />
      <CodeBlock
        @code='
          <CardRenderer
            @card=@card
            @format="isolated"
            @mode="schema"
            @setPosition=@setPosition
            @removeField=@removeField
          />
        '
        @language="html"
      />

      <h3>Edit mode</h3>
      <CardRenderer
        @card={{this.model}}
        @format="isolated"
        @mode="edit"
        @setFieldValue={{action this.noop}}
      />
      <CodeBlock
        @code='
          <CardRenderer
            @card=@card
            @format="isolated"
            @mode="edit"
            @setFieldValue=@setFieldValue
          />
        '
        @language="html"
      />

      <h3>View mode</h3>
      <CardRenderer
        @card={{this.model}}
        @format="isolated"
        @mode="view"
      />
      <CodeBlock
        @code='
          <CardRenderer
            @card=@card
            @format="isolated"
            @mode="view"
          />
        '
        @language="html"
      />
  </section>

  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Right Edge (No field selected)</h2>
    <RightEdge />
    <CodeBlock
      @code='<RightEdge />'
      @language="html"
    />

    <h2>Right Edge (With adopted card preview)</h2>
    TK
    {{!-- <RightEdge />
    <CodeBlock
      @code='<RightEdge />'
      @language="html"
    /> --}}

    <h2>Right Edge (With selected field)</h2>
    <RightEdge
      @selectedField={{this.model.isolatedFields.firstObject}}
      @selectField={{action this.noop}}
      @setFieldName={{this.noop}}
      @setFieldLabel={{this.noop}}
      @setFieldInstructions={{this.noop}}
      @setNeededWhenEmbedded={{this.noop}}
    />
    <CodeBlock
      @code='
        <RightEdge
          @selectedField=@selectedField
          @selectField=@selectField
          @setFieldName=@setFieldName
          @setFieldLabel=@setFieldLabel
          @setFieldInstructions=@setFieldInstructions
          @setNeededWhenEmbedded=@setNeededWhenEmbedded
        />
      '
      @language="html"
    />
  </section>
