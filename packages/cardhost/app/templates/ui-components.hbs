<section class="ui-components">
  <h1>Cardhost UI Components</h1>

  {{!-- TODO: Add navbar --}}

  <section class="ui-components--section icons">
    <h2>Icons</h2>
    <a href="/ember-svg-jar/index.html">** See all SVG icons here. **</a>

    <h4>Inline SVG embedding example with `fill` color change (Hover over the icons)</h4>
    {{svg-jar "clock" class="ui-components--icon" width="30px" height="30px"}}

    <h4>Inline SVG embedding example with `stroke` color change</h4>
    {{svg-jar "cards" class="ui-components--icon" width="30px" height="30px"}}

    <CodeEditor @language="handlebars" @code='\{{svg-jar "clock" class="ui-components--icon" width="30px" height="30px"}}
\{{svg-jar "cards" class="ui-components--icon" width="30px" height="30px"}}' />
    <CodeEditor @language="css" @code='/* Note:
  - You may need to add `--icon-color` CSS variable to the SVG, if not already in there. (Or use the `fill` and/or `stroke` properties.)
  - Do not hardcode colors in the existing SVGs. Make a copy of the SVG first.
*/
.ui-components--icon {
  --icon-color: var(--ch-light-op50);
}
.ui-components--icon:hover {
  --icon-color: var(--ch-light);
}' />
  </section>

  <section class="ui-components--section">
    <h2>Font Family</h2>
    <CodeEditor @code='--ch-font-family: "Open Sans", Roboto, "Helvetica Neue", Helvetica, Arial, sans-serif;'
      @language="css" />
  </section>

  <section class="ui-components--section">
