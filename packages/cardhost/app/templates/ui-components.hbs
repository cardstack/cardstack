      <span class="ch-checkmark"></span>
    </label>
     <CodeBlock
      @code={{if this.selected '
        <label class="ch-label ch-input-group ch-checkbox-group checked">
          Selected
          <Input @type="checkbox" @class="ch-checkbox" @checked=true />
          <span class="ch-checkmark"></span>
        </label>
      ' '
