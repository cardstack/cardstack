<section class="ui-components">
  <h1>Cardhost UI Components</h1>

  <section class="ui-components--section">
    <h2>Font</h2>
    <CodeBlock
      @code='--ch-font-family: "Open Sans", Roboto, "Helvetica Neue", Helvetica, Arial, sans-serif;'
      @language="css"
    />
  </section>

  <section class="ui-components--section">
    <h2>Color Palette</h2>
    <ColorPalette />
  </section>

  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Buttons</h2>
    <h3>Primary button</h3>
    <button class="ch-button">Save</button>
    <CodeBlock
      @code='<button class="ch-button">Save</button>'
      @language="html"
    />

    <h3>Secondary button</h3>
    <button class="ch-button ch-button--secondary">Preview</button>
    <CodeBlock
      @code='<button class="ch-button ch-button--secondary">Preview</button>'
      @language="html"
    />

    <h3>Icon buttons (SVG button)</h3>
    <div>
      <button class="ch-button ch-button--icon user" aria-label="User"></button>
      <button class="ch-button ch-button--icon catalog" aria-label="Catalog"></button>
      <button class="ch-button ch-button--icon share" aria-label="Share"></button>
      <button class="ch-button ch-button--icon library" aria-label="Library"></button>
    </div>
    <div>
      <CodeBlock @code='
        <button class="ch-button ch-button--icon user" aria-label="User"></button>
        <button class="ch-button ch-button--icon catalog" aria-label="Catalog"></button>
        <button class="ch-button ch-button--icon share" aria-label="Share"></button>
        <button class="ch-button ch-button--icon library" aria-label="Library"></button>
      '
        @language="html"/>
    </div>

    <h3>Secondary Icon button</h3>
    <button class="ch-button ch-button--icon-secondary delete" aria-label="Delete"></button>
    <CodeBlock
      @code='<button class="ch-button ch-button--icon-secondary delete" aria-label="Delete"></button>'
      @language="html"
    />

    <h3>Blue CTA button on default card</h3>
    TK
  </section>



  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Dropdowns</h2>
    <h3>View Switcher</h3>
    <div>
      <ModeSwitcher @name="" @mode="view" />
      <ModeSwitcher @name="" @mode="edit" />
      <ModeSwitcher @name="" @mode="schema" />
    </div>
    <CodeBlock
      @code='
        <ModeSwitcher @name="[card-id-here]" @mode="view" />
        <ModeSwitcher @name="[card-id-here]" @mode="edit" />
        <ModeSwitcher @name="[card-id-here]" @mode="schema" />
      '
      @language="html"
    />

    <h3>Dropdown (Right Edge)</h3>
    TK
  </section>



  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Pill Selector</h2>

    <div class="pill-selector">
      <div class="pill-option selected">Properties</div>
      <div class="pill-option">Structure</div>
    </div>

    <CodeBlock
      @code='
        <div class="pill-selector">
          <div class="pill-option selected">Properties</div>
          <div class="pill-option">Structure</div>
        </div>
      '
      @language="html"
    />
  </section>

  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Search Bar</h2>
    <div class="ch-search-bar">Search Library</div>
    <CodeBlock
      @code='<div class="ch-search-bar">Search Library</div>'
      @language="html"
    />
  </section>

  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Filter Bar</h2>
    <div class="ch-filter-bar">Filter Results</div>
    <CodeBlock
      @code='<div class="ch-filter-bar">Filter Results</div>'
      @language="html"
    />
  </section>

  <section class="ui-components--section">
    <h2>Catalog Field</h2>
    <div class="ch-catalog-field" role="button" draggable="true">
      <div class="ch-catalog-field--icon" style={{css-url "background-image" "/assets/images/field-types/text.svg"}}></div>
      <div>
        <h4 class="ch-catalog-field--title">Text</h4>
        <p class="ch-catalog-field--description">All-purpose text field</p>
      </div>
    </div>
  </section>

  <section class="ui-components--section">
    <h2>Catalog</h2>
    <section class="ch-catalog">
      <header class="ch-catalog--header">
        <h3 class="ch-catalog--title">Card Catalog</h3>
        <div class="ch-catalog--header-btns">
          <button class="ch-catalog--header-btn sidebar active" aria-label="View as sidebar"></button>
          <button class="ch-catalog--header-btn grid" aria-label="View as grid"></button>
        </div>
        <div class="ch-filter-bar">Filter Results</div>
      </header>
      <div class="ch-catalog--fields">
        <div class="ch-catalog-field" role="button" draggable="true">
          <div class="ch-catalog-field--icon" style={{css-url "background-image" "/assets/images/field-types/text.svg"}}></div>
          <div>
            <h4 class="ch-catalog-field--title">Text</h4>
            <p class="ch-catalog-field--description">All-purpose text field</p>
          </div>
        </div>
      </div>
    </section>
  </section>

  <section class="ui-components--section ui-components--grid-2-col">
    <h2>Field Renderer</h2>
    <h3>Schema mode</h3>
    <FieldRenderer
        @field={{this.model.sampleNameField}}
        @format="isolated"
        @mode="schema"
      />
    <CodeBlock
      @code='
        <FieldRenderer
          @field=@field
          @format="isolated"
          @mode="schema"
        />
      '
      @language="html"
    />
    <h3>Edit mode</h3>
    <FieldRenderer
      @field={{this.model.sampleNameField}}
      @format="isolated"
      @mode="edit"
      @setFieldValue={{action this.noop}}
    />
    <CodeBlock
      @code='
        <FieldRenderer
          @field=@field
          @format="isolated"
          @mode="edit"
          @setFieldValue=@setFieldValue
        />
      '
      @language="html"
    />
    <h3>View mode</h3>
    <FieldRenderer
      @field={{this.model.sampleNameField}}
      @format="isolated"
      @mode="view"
    />
    <CodeBlock
      @code='
        <FieldRenderer
          @field=@field
          @format="isolated"
          @mode="view"
        />
      '
      @language="html"
    />
  </section>

