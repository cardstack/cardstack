  />
</div>' @language="html" />
  </section>

  <section class="ui-components--section ui-components--grid-2-col form-fields">
    <h2>Form Fields</h2>

    <h3>Text Input</h3>
    <div>
      <div class="ch-input-group">
        <label for="input-1" class="ch-label">Field label</label>
        <Input @id="input-1" @class="ch-input" @placeholder="Default field" />
      </div>
      <label class="ch-input-group">
        <span class="ch-label">Field label</span>
        <Input @class="ch-input disabled" @disabled={{true}} @value="Disabled field" />
      </label>
      <label class="ch-input-group required">
        <span class="ch-required">required</span>
        <span class="ch-label">Field label</span>
        <Input @class="ch-input" @placeholder="Required field" />
        <div class="ch-helper-text">Helper text goes here (optional).</div>
      </label>
      <label class="ch-input-group">
        <span class="ch-label">Field label</span>
        <Input @class="ch-input error" @placeholder="Error state" />
        <div class="ch-helper-text error">Error message goes here, replacing any helper text.</div>
      </label>
    </div>
    <CodeEditor @code='<div class="ch-input-group \{{if required "required"}}">
  \{{#if required}}
    <span class="ch-required">required</span>
  \{{/if}}
  <label class="ch-label">\{{label}}</label>
  <Input
    @class="ch-input \{{if required "required"}} \{{if disabled "disabled"}} \{{if error "error"}}"
    @value=\{{value}}
    @placeholder=\{{placeholderText}}
    @disabled=\{{disabled}}
  />
  <div class="ch-helper-text \{{if error "error"}}">
    \{{#if error}}
      \{{errorMessage}}
    \{{else}}
      \{{helperText}}
    \{{/if}}
  </div>
</div>' @language="handlebars" />

    <h3>Textarea</h3>
    <div>
      <div class="ch-input-group">
        <label for="textarea-1" class="ch-label">Textarea label</label>
        <Textarea @id="textarea-1" @class="ch-textarea" @placeholder="Default textarea" />
        </div>
      <label class="ch-input-group">
        <span class="ch-label">Textarea label</span>
        <Textarea @class="ch-textarea" @disabled={{true}} @placeholder="Disabled textarea" />
      </label>
      <label class="ch-input-group required">
        <span class="ch-required">required</span>
        <span class="ch-label">Textarea label</span>
        <Textarea @class="ch-textarea" @placeholder="Required textarea" />
        <div class="ch-helper-text">Helper text goes here (optional).</div>
      </label>
      <label class="ch-input-group">
        <span class="ch-label">Textarea label</span>
        <Textarea @class="ch-textarea error" @placeholder="Error state" />
        <div class="ch-helper-text error">Error message goes here, replacing any helper text.</div>
      </label>
    </div>
    <CodeEditor
      @code='<label class="ch-input-group \{{if required "required"}}">
  \{{#if required}}
    <span class="ch-required">required</span>
  \{{/if}}
  <span id=\{{id}} class="ch-label">\{{label}}</span>
  <Input
    @id=\{{id}}
    @class="ch-textarea \{{if required "required"}} \{{if disabled "disabled"}} \{{if error "error"}}"
    @value=\{{value}}
    @placeholder=\{{placeholderText}}
    @disabled=\{{disabled}}
  />
  <div class="ch-helper-text \{{if error "error"}}">
    \{{#if error}}
      \{{errorMessage}}
    \{{else}}
      \{{helperText}}
    \{{/if}}
  </div>
</div>'
      @language="handlebars"
    />

    <h3>Checkbox</h3>
    <div>
      <label class="ch-label ch-input-group ch-checkbox-group {{if this.selected "checked"}}">
        {{if this.selected "selected" "not selected"}}
        <Input @class="ch-checkbox" @type="checkbox" @checked={{mut this.selected (not this.selected)}} />
        <span class="ch-checkmark">
          {{#if this.selected}}
            {{svg-jar "checkmark" width="12px" height="12px"}}
          {{/if}}
        </span>
      </label>
      <label class="ch-label ch-input-group ch-checkbox-group disabled">
        Not selected (disabled state)
        <Input @class="ch-checkbox disabled" @disabled={{true}} @type="checkbox" />
        <span class="ch-checkmark"></span>
      </label>
      <label class="ch-label ch-input-group ch-checkbox-group disabled">
        Selected (disabled state)
        <Input @class="ch-checkbox disabled" @checked={{true}} @disabled={{true}} @type="checkbox" />
        <span class="ch-checkmark">{{svg-jar "checkmark" width="12px" height="12px"}}</span>
      </label>
    </div>
    <CodeEditor
      @code='<label class="ch-label ch-input-group ch-checkbox-group \{{if checked "checked"}} \{{if disabled "disabled"}}">
  \{{label}}
  <Input @class="ch-checkbox" @type="checkbox" @checked=\{{checked}} @disabled=\{{disabled}} />
  <span class="ch-checkmark">
    \{{#if checked}}
      \{{svg-jar "checkmark" width="12px" height="12px"}}
    \{{/if}}
  </span>
</label>'
      @language="handlebars"
    />

    <h3>Dropdown</h3>
    <div>
      <Dropdown @theme="dark" @options={{this.model.countries}} @searchEnabled={{false}} />
      <Dropdown @theme="dark" @options={{this.model.countries}} @searchEnabled={{false}} @label="Disabled dropdown" @disabled={{true}} />
      <Dropdown @theme="dark" @options={{this.model.countries}} @searchEnabled={{false}} @outerLabel="Country" @required={{true}} />
    </div>
    <CodeEditor
      @code='<Dropdown @theme="dark" @options=\{{options}} @searchEnabled={{false}} />

// Additional Attributes
<Dropdown @theme="dark" @options=\{{options}}
  @searchEnabled={{false}}
  @label=\{{label}}
  @outerLabel=\{{outerLabel}}
  @required=\{{required}}
  @disabled=\{{disabled}}
/>'
      @language="handlebars"
    />
  </section>

