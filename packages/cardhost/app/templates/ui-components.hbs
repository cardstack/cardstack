      @code='
        <FieldRenderer
          @field=@field
          @format="isolated"
          @mode="schema"
        />
      '
      @language="html"
    />
    <h3>Edit mode</h3>
    <FieldRenderer
      @field={{this.model.sampleNameField}}
      @format="isolated"
      @mode="edit"
      @setFieldValue={{action this.noop}}
    />
