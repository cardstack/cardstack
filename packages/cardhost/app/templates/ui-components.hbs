    />
    <h3>View mode</h3>
    <FieldRenderer
      @field={{this.model.sampleNameField}}
      @format="isolated"
      @mode="view"
    />
    <CodeBlock
      @code='
        <FieldRenderer
          @field=@field
          @format="isolated"
          @mode="view"
        />
      '
      @language="html"
    />
  </section>

