    <h3>Disabled Icon button</h3>
    <div>
      <button disabled class="ch-button ch-button--icon user" aria-label="User"></button>
      <button disabled class="ch-button ch-button--icon catalog" aria-label="Catalog"></button>
    </div>
    <div>
      <CodeEditor @code='<button disabled class="ch-button ch-button--icon user" aria-label="User"></button>
<button disabled class="ch-button ch-button--icon catalog" aria-label="Catalog"></button>' @language="html" />
    </div>

    <h3>Save button</h3>
    <SaveButton @card={{this.model}} />
    <CodeEditor @code='<SaveButton @card=\{{card}} />' @language="html" />
  </section>

  <section class="ui-components--section ui-components--grid-2-col">
    <h2>View Switcher</h2>
    <div>
      <ModeSwitcher @name="" @mode="view" />
      <ModeSwitcher @name="" @mode="edit" />
      <ModeSwitcher @name="" @mode="schema" />
    </div>
    <CodeEditor @code='<ModeSwitcher @name="[card-id-here]" @mode="view" />
<ModeSwitcher @name="[card-id-here]" @mode="edit" />
