<h2>Render Card</h2>
<p>
  Try rendering the "first-card" component after using the CLI to load the card.
</p>

<div>
  Card name:
  <Input @value={{this.cardName}} />
</div>
<div>
  Render Format:
  <Input @value={{this.format}} />
</div>
<div>
  <Cta {{on "click" this.load}} @variant="secondary primary">Load</Cta>
</div>

{{#if this.errorMsg}}
  Error rendering card {{this.cardName}}: {{this.errorMsg}}
{{/if}}

{{! eslint is confused about indentation for else-if }}
{{! template-lint-disable block-indentation}}
{{#if this.loadCard.isRunning}}
  Loading card {{this.cardName}}...
{{else if
  (and this.loadedCard this.cardComponent (eq this.loadedCard this.cardName))
}}
  {{component this.cardComponent}}
{{/if}}