<section
  class="card-editor"
  data-test-card-edit={{this.card.name}}
  {{did-update this.updateCard @card}}
>
  <AnimatedContainer class="card-renderer--container" {{on "click" (action (mut @card.isSelected) (not @card.isSelected))}}>
    <CardRenderer
      @card={{this.card}}
      @mode="edit"
      @setFieldValue={{action this.setFieldValue}}
      @format="isolated"
      @selectField={{action this.selectField}}
      @selectedField={{this.selectedField}}
      @cardSelected={{this.card.isSelected}}
      @cardFocused={{action (mut this.card.isSelected)}} />
  </AnimatedContainer>
</section>

{{!-- This is hidden, used in tests --}}
<section class="cardhost-card-document">
  <h3>Card Document</h3>
  <code data-test-card-json>{{this.cardJson}}</code>
</section>
