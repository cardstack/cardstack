{{#if this.cardstackSession.isAuthenticated}}
  <div class="card-renderer--top-edge-buttons">
    <button
      {{on "click" this.delete}}
      class="ch-button ch-button--icon-secondary delete"
      data-test-card-editor-delete-btn
      disabled={{not this.cardstackSession.isAuthenticated}}
      aria-label="Delete"
    >
    </button>
    <button
      {{on "click" this.preview}}
      class="ch-button ch-button--secondary"
      data-test-card-editor-preview-btn
      disabled={{not this.cardstackSession.isAuthenticated}}
    >
      Preview
    </button>
    <SaveButton @card={{this.card}}/>
  </div>
{{/if}}

<CardhostLeftEdge />

<RightEdge
  @card={{this.card}}
  @mode="edit"
  @cardSelected={{true}} {{!-- Change this when we want to display different right-edge options --}}
/>

<section
  class="card-editor"
  data-test-card-edit={{this.card.name}}
  {{did-update this.updateCard @card}}
>
  <CardRenderer
    @card={{this.card}}
    @mode="edit"
    @setFieldValue={{action this.setFieldValue}}
    @format="isolated"
    @selectField={{action this.selectField}}
    @selectedField={{this.selectedField}}
    @cardSelected={{this.cardSelected}}
    @cardFocused={{action (mut this.cardSelected)}} />
</section>

<section class="cardhost-card-document">
  <h3>Card Document:</h3>
  <CodeEditor
    @code={{this.cardJson}}
    @language="json"
  />
</section>
