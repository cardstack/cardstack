{{! template-lint-disable no-inline-styles}}
<div class="{{if this.isActive "active" "inactive"}} {{@classNames}} re-sizable" ...attributes id={{this.elementId}} style={{this.style}} {{did-insert this.setElement}} {{did-update this.resetWidth @width}}  {{did-update this.resetHeight @height}}>
  {{#each this.directions as |dir|}}
    <div
      class={{concat "resizer " dir}}
      {{on "mousedown" (fn this._onResizeStart dir)}}
      {{on "touchstart" (fn this._onResizeStart dir)}}
    >
    </div>
  {{/each}}

  {{yield}}
</div>