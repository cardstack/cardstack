<div class="{{if this.isActive "active" "inactive"}} {{@classNames}} re-sizable" ...attributes id={{this.elementId}} style={{this.style}}>
  {{#each @directions as |dir|}}
    <div
      class={{concat "resizer " dir}}
      {{on "mousedown" (fn this._onResizeStart dir)}}
      {{on "touchstart" (fn this._onResizeStart dir)}}
    >
    </div>
  {{/each}}

  {{yield}}
</div>