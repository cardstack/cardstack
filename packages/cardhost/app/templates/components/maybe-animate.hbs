{{#if (eq @component "animated-each")}}
  {{#if (and @animationMode (eq @mode @animationMode))}}
    {{#animated-each @content key=@key use=@use duration=@duration as |field|}}
      {{yield field}}
    {{/animated-each}}
  {{else}}
    {{#each @content as |field|}}
      {{yield field}}
    {{/each}}
  {{/if}}
{{else}}
  {{#if (and @animationMode (eq @mode @animationMode))}}
    {{#let (component @component) as |Component|}}
      <Component @card={{@content}} @watch={{@watch}} @use={{@use}} @duration={{@duration}}>
        {{yield}}
      </Component>
    {{/let}}
  {{else}}
    {{yield}}
  {{/if}}
{{/if}}

