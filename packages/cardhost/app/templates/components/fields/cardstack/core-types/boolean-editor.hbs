<div {{did-insert (action this.setChecked)}}>
  <label
    data-test-date-field-editor-label
    for={{concat "edit-" @field.name "-field-value"}}
  >
    {{@field.name}}
  </label>
  <Input
    @id={{concat this.idPrefix "-true"}}
    @class="cardstack-core-types-field-value-true"
    @name={{concat "field" this.nonce "-boolean-field-value"}}
    @checked={{this.fieldValue}}
    @type="radio"
    @click={{action this.updateFieldValue}}
  />
  <label for={{concat this.idPrefix "-true"}}>True</label>
  <Input
    @id={{concat this.idPrefix "-false"}}
    @class="cardstack-core-types-field-value-false"
    @name={{concat "field" this.nonce "-boolean-field-value"}}
    @checked={{not this.fieldValue}}
    @type="radio"
    @click={{action this.updateFieldValue}}
  />
  <label for={{concat this.idPrefix "-false"}}>False</label>
</div>