<section
  ...attributes
  data-test-editor-pane
  class="cardhost-card-theme-editor {{if (eq this.cssModeToggle.dockLocation "bottom") "bottom-docked"}}"
>
  <h3>Card Theme Editor</h3>
  <CodeEditor
    @code={{@model.isolatedCss}}
    @language="css"
    @readOnly={{false}}
    @updateCode={{action "updateCode"}}
    class="editor-pane-code"
  />

  <h3>HTML Viewer</h3>
  <CodeEditor
    @code={{this.markup}}
    @language="handlebars"
    @readOnly={{true}}
    class="editor-pane-code"
  />
</section>

<style id="card-styles">{{@model.isolatedCss}}</style>
