<ReSizable ...attributes data-test-editor-pane class="cardhost-card-theme-editor {{this.classNames}}"
  @width={{this.width}} @directions={{this.resizeDirections}} @height={{this.height}}>
  <div class="resizable-content">
    <ReSizable @directions={{this.cssEditorResizeDirections}} class="editor-section" @height="50%">
      <CodeEditor @title="CSS" @code={{@model.isolatedCss}} @language="css" @readOnly={{false}} @resizable={{true}}
        @updateCode={{action "updateCode"}} class="editor-pane-code" />
    </ReSizable>

    <div class="editor-section">
      <CodeEditor @title="HTML" @code={{this.markup}} @language="handlebars" @readOnly={{true}} @resizable={{true}}
        class="editor-pane-code" />
    </div>
    {{svg-jar "icon-grabber" class="drag-handle"}}
  </div>
</ReSizable>

<style id="card-styles">
  {
      {
      scope-css this.model.isolatedCss this.model.name
    }
  }
</style>