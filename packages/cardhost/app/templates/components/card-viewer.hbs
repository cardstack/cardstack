<section class="card-renderer--container" data-test-card-view={{@card.name}}>
  <div role="button" class="card-renderer--inner-container {{@mode}}-container" {{on "mouseenter" (action (mut @card.isSelected) this.cardstackSession.isAuthenticated)}} {{on "mouseleave" (action (mut @card.isSelected) false)}} data-test-card-renderer>
    <CardRenderer
      @card={{@card}}
      @mode={{@mode}}
      @format="isolated"
      @cardSelected={{@card.isSelected}}
      @contextMenuOpen={{this.contextMenuOpen}}
      @setContextMenu={{this.setContextMenu}}
    />
  </div>
</section>

<style data-test-view-css>
  {{scope-css @card.isolatedCss @card.name}}
</style>

{{!-- This is hidden, used in tests --}}
<section class="cardhost-card-document">
  <h3>Card Document</h3>
  <code data-test-card-json>{{this.cardJson}}</code>
</section>