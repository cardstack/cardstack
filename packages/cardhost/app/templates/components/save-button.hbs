{{! template-lint-disable attribute-indentation}}
<button
  {{on "click" this.save}}
  class={{concat
    "ch-button ch-button--save "
    (if this.justSaved "just-saved ")
    (if (not @card.isDirty) "saved ")
  }}
  data-test-card-save-btn
  disabled={{not (and this.cardstackSession.isAuthenticated @card.isDirty)}}
>
  <span class="ch-button--inner">
    {{#if this.saveCard.isRunning}}
      Saving
      <span class="loading-spinner"><div></div><div></div><div></div><div></div></span>
    {{else}}
      {{#if @card.isNew}}
        Create
      {{else if @card.isDirty}}
        Save
      {{else}}
        Saved {{svg-jar "checkmark" width="12px" height="9px"}}
      {{/if}}
    {{/if}}
  </span>
</button>