<Cta
  {{on "click" this.save}}
  @variant="primary"
  class={{concat
    "save-button "
    (if this.justSaved "just-saved ")
    (if (not @card.isDirty) "saved ")
  }}
  data-test-card-save-btn
  {{did-update this.autoSave @card.isDirty}}
>
  {{#if this.saveCard.isRunning}}
    Saving
    <span class="loading-spinner"><div></div><div></div><div></div><div></div></span>
  {{else}}
    {{#if @card.isDirty}}
      Unsaved
    {{else}}
      Saved {{svg-jar "checkmark" width="12px" height="9px"}}
    {{/if}}
  {{/if}}
</Cta>