{{#from-elsewhere name="cardhost-modal" as |args outsideParams|}}
  {{#if args}}
    <div class="cardhost-modal-backdrop"></div>
    <div
      role="button"
      class={{this.containerClass}}
      {{on "click" (fn this.outsideClick outsideParams.outsideClick)}}
      data-test-cardhost-modal-container
    >
      {{component args}}
    </div>
  {{/if}}
{{/from-elsewhere}}