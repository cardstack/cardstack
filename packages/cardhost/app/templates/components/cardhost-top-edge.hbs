<div class="cardhost-top-edge {{@mode}}" data-test-cardhost-top-edge>
  {{#cardstack-session as |session|}}
    <div class="login-box {{if session.isAuthenticated "" "full-width"}}">
      {{#if session.isAuthenticated }}
        <Cta
          id="logout-button"
          onclick={{action this.logout session.logout}}
          @label="Logout"
          @variant="secondary primary"
          @theme="cs-dark" />
      {{else}}
        {{#mock-login as |login|}}
          <Cta
            id="login-button"
            onclick={{action login "user1"}}
            @label="Login"
            @variant="secondary primary"
            @theme="cs-dark"
            data-test-cardstack="login-button" />
        {{/mock-login}}
      {{/if}}
    </div>
  {{/cardstack-session}}

  {{yield}}
</div>