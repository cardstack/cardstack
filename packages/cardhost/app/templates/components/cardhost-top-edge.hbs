<div class="cardhost-top-edge {{@mode}}" data-test-cardhost-top-edge>
  {{yield}}

  {{#if (not (eq @mode "themer"))}}
    {{#cardstack-session as |session|}}
      {{#if session.isAuthenticated }}
        <Cta
          id="logout-button"
          onclick={{action this.logout session.logout}}
          @label="Logout"
          @variant="secondary"
          @theme="cs-dark"
          class="logout-btn" />
      {{else}}
        {{#mock-login as |login|}}
          <Cta
            id="login-button"
            onclick={{action login "user1"}}
            @label="Login"
            @variant="secondary primary"
            @theme="cs-dark"
            class="login-btn"
            data-test-cardstack="login-button" />
        {{/mock-login}}
      {{/if}}
    {{/cardstack-session}}
  {{/if}}
</div>