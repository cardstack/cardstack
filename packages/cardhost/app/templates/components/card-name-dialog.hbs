<Dialog open={{true}} @title={{this.title}} @mode={{@mode}} @icon={{@icon}}>
  <p class="dialog--message">
    Give your card a meaningful name
  </p>
  <TextField
    @id="card__name"
    @placeholder="i.e. Millenial Puppies"
    @setValue={{action this.updateCardName}}
  />
  <div class="dialog--button-group">
    {{#if @closeDialog}}
      <Cta {{on "click" @closeDialog}} @variant="secondary primary">Cancel</Cta>
    {{/if}}
    <Cta {{on "click" this.createCard}} @variant="primary" data-test-create-card-btn>Create</Cta>
  </div>
</Dialog>