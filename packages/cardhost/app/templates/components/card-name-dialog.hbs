<Dialog open={{true}} @title={{this.title}} @mode={{@mode}} @icon={{@icon}}>
  <TextField
    @id="card__name"
    @label="Give your card a name"
    @theme="cs-dark"
    @placeholder="i.e. My New Card"
    @setValue={{this.updateCardName}}
    {{on "keydown" this.keyDown}}
    {{autofocus}}
  />
  <div class="dialog--button-group">
    {{#if @closeDialog}}
      <Cta {{on "click" @closeDialog}} @variant="secondary primary" data-test-cancel-create-btn>Cancel</Cta>
    {{/if}}
    <Cta {{on "click" this.createCard}} @variant="primary" data-test-create-card-btn>
      {{#if this.createCardTask.isRunning}}
        <img alt="Creating a card. Please wait." src="/assets/images/icons/spinner_black.png" class="card-name-dialog-spinner loading-spinner"> 
      {{else}}
        Create
      {{/if}}
    </Cta>
  </div>
</Dialog>