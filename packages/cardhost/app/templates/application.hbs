<div>
  <header class="cardhost--header">
    <h1>Card Host</h1>

    {{#cardstack-session as |session|}}
      {{#if session.isAuthenticated }}
        <button
          id="logout-button"
          onclick={{action session.logout}}
        >
          Logout {{session.user.name}}
        </button>
      {{else}}
        {{#mock-login as |login|}}
          <button
            id="login-button"
            onclick={{action login "user1"}}
            data-test-cardstack="login-button"
          >
            Login
          </button>
        {{/mock-login}}
      {{/if}}
    {{/cardstack-session}}
  </header>

  {{outlet}}
</div>