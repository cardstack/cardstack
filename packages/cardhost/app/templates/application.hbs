<header class="cardhost--header">
  <div>
    <h1><LinkTo @route="index">Card Host</LinkTo></h1>

    {{#cardstack-session as |session|}}
      {{#if session.isAuthenticated }}
        <button
          id="logout-button"
          onclick={{action session.logout}}
        >
          Logout {{session.user.name}}
        </button>
      {{else}}
        {{#mock-login as |login|}}
          <button
            class="cardhost-button"
            id="login-button"
            onclick={{action login "user1"}}
            data-test-cardstack="login-button"
          >
            Login
          </button>
        {{/mock-login}}
      {{/if}}
    {{/cardstack-session}}
  </div>
</header>
<main class="cardhost--main">
  {{outlet}}
</main>
