<div class="cardhost-welcome-page">
  <aside class="cardhost-welcome-left-edge" data-test-cardhost-welcome-left-edge>
    <nav class="cardhost-welcome-left-edge--nav">
      <ul>
        <li><div class="left-edge-icon recent active">Recent Cards</div></li>
        <li><div class="left-edge-icon saved">Saved Templates</div></li>
        <li><div class="left-edge-icon common">Common Cards</div></li>
        <li><div class="left-edge-icon add-card">New Blank Card</div></li>
      </ul>
    </nav>
  </aside>
  <main class="cardhost-catalog">
    <section class="cardhost-section cardhost-section--recent-cards">
      <header class="cardhost--header--recent-cards">
        <h2 class="cardhost-catalog--title">Recent Cards</h2>
      </header>

      <div class="card-catalog">
        {{#each this.model as |card|}}
          {{#if (eq card.name "@cardstack/base-card")}}
            {{!--
              The template for cards is too terse to really show anything for the base card,
              so just providing a link to the base card instead of rendering it in an embedded
              format.
            --}}
            <LinkTo
              @route="cards.view"
              @model="@cardstack/base-card"
              @class="card-renderer--embedded-card-link"
            >
              <div class="embedded-card cardstack_base-card">
                Base Card
              </div>
            </LinkTo>
          {{else}}
            <CardRenderer @card={{card}} @format="embedded"/>
          {{/if}}
        {{/each}}
      </div>
    </section>

    <section class="cardhost-section cardhost-section--saved-templates">
      <header class="cardhost--header--saved-templates">
        <h2 class="cardhost-catalog--title">Saved Templates</h2>
      </header>
    </section>

    <section class="cardhost-section cardhost-section--common-cards">
      <header class="cardhost--header--common-cards">
        <h2 class="cardhost-catalog--title">Common Cards</h2>
      </header>

      <div class="card-catalog">
        <LinkTo @route="cards.add" @class="card-renderer--embedded-card-link">
          <div class="embedded-card placeholder icon-common-form"></div>
          <div class="embedded-card-label">Form</div>
        </LinkTo>
        <LinkTo @route="cards.add" @class="card-renderer--embedded-card-link">
          <div class="embedded-card placeholder icon-common-layout"></div>
          <div class="embedded-card-label">Layout</div>
        </LinkTo>
        <LinkTo @route="cards.add" @class="card-renderer--embedded-card-link">
          <div class="embedded-card placeholder icon-common-collection"></div>
          <div class="embedded-card-label">Collection</div>
        </LinkTo>
      </div>
    </section>

    <section class="cardhost-section cardhost-section--add-card">
      <header class="cardhost--header--add-card">
        <h2 class="cardhost-catalog--title">New Blank Card</h2>
      </header>

      <div class="card-catalog">
        <LinkTo
          @route="cards.add"
          @class="card-renderer--embedded-card-link"
        >
          <div class="embedded-card placeholder icon-add-card"></div>
          <div class="embedded-card-label">Blank Card</div>
        </LinkTo>
      </div>
    </section>
  </main>
</div>