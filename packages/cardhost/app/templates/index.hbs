<CardhostTopEdge>
  <nav class="cardhost--topnav">
    <ul>
      <li>
        <LinkTo @route="render">Render Card</LinkTo>
      </li>
      <li>
        <LinkTo @route="cards.add">Add a Card</LinkTo>
      </li>
      <li>
        <Input
          @size="60"
          @value={{this.cardId}}
          @placeholder="Card ID to View"
          @enter={{action this.viewCard this.cardId}}
        />
        {{#if this.cardId}}
          <LinkTo @route="cards.view" @model={{this.cardId}}>View Card</LinkTo>
        {{/if}}
      </li>
    </ul>
  </nav>
</CardhostTopEdge>

<section class="cardhost-catalog">
  <header>
    <h2 class="cardhost-header-title">Catalog</h2>
    <p>
      Right now we are emulating a catalog by just listing out all the cards in
      the local store. Any card that you create or view will be added to the list below.
      (Store invalidation as a result of editing cards will actually clear cards from the store,
      in which case you may need to revisit cards again to reinsert entries back into the store.)
    </p>
  </header>

  <div class="card-catalog">
    {{#each this.model as |card|}}
      <CardRenderer @card={{card}} @format="embedded"/>
    {{/each}}
  </div>
</section>