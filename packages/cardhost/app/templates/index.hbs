<ul>
  <li>
    <LinkTo @route="render">Render Card</LinkTo>
  </li>
  <li>
    <LinkTo @route="cards.add">Add a Card</LinkTo>
  </li>
  <li>
    <Input
      @value={{this.cardId}}
      @placeholder="Card ID to View"
      @enter={{action this.viewCard this.cardId}}
    />
    {{#if this.cardId}}
      <LinkTo @route="cards.view" @model={{this.cardId}}>View Card</LinkTo>
    {{/if}}
  </li>
</ul>