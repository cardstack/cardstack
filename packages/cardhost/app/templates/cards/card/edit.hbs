{{#if (and (not-eq this.routeInfo.mode "themer") (not-eq this.routeInfo.mode "schema"))}}
  <div class="card-renderer--top-edge-buttons">
    <div class="mode-indicator">
      <span class="mode-indicator--label">
        {{svg-jar "edit" width="13px" height="13px"}}
        Edit Mode
      </span>
      <LinkTo
        title="Close edit mode"
        @route="cards.card.view"
        @class="mode-indicator--link"
        @model={{this.model}}
        data-test-top-edge-link="view"
      >
        <span>View</span>
      </LinkTo>
    </div>
    <SaveButton @card={{this.model}} />
    <Cta @variant="primary" class="edge-actions-button">
      {{svg-jar "actions" width="16px" height="16px"}}
    </Cta>
  </div>

  <CardhostLeftEdge />
{{/if}}

{{outlet}}