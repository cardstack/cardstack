{{#if (and (not-eq this.routeInfo.mode "themer") (not-eq this.routeInfo.mode "schema"))}}
  <div class="card-renderer--top-edge-buttons">
    <div class="top-edge--mode-label">
      Edit Mode
        <LinkTo
          @route="cards.card.view"
          @class="top-edge--mode-link view"
          @model={{this.model}}
          data-test-top-edge-link="view"
        >
          <span>Preview</span>
        </LinkTo>
    </div>
    <SaveButton
      @card={{this.model.card}}
      @isDirty={{this.model.isDirty}}
      @updateCard={{action "updateCard"}}
    />
  </div>

  <CardhostLeftEdge />
{{/if}}

{{outlet}}