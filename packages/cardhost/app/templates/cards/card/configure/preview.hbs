<section class="card-renderer--container" data-test-card-preview={{this.model.card.canonicalURL}}>
  <div class="card-renderer--inner-container preview-container">
    <CardRenderer
      @card={{this.model.card}}
      @format="isolated"
      @mode="view"
      @class="preview"
      @suppressHeader={{true}} />
  </div>
</section>