<CardhostTopEdge @mode="themer" />
<ThemerToolbar @model={{this.model}} />

<section class="card-view" data-test-card-view={{this.model.name}}>
  <CardRenderer
    @card={{this.model}}
    @format="isolated"
    @mode="view"
    @class="themer"
    @cardSelected={{false}}
  />
</section>

<div data-test-editor-pane>
  <EditorPane data-test-dock-location={{this.cssModeToggle.dockLocation}}
    @model={{this.model}}
    @saveCss={{this.saveCss}}
    @updateCode={{this.updateCode}}
  />
</div>

<style data-test-view-css>
  {{scope-css this.model.isolatedCss this.model.name}}
</style>