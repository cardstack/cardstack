<CardhostLeftEdge />

<main class="card-builder" data-test-card-builder>
  <h1 class="card-builder--header">Card Builder</h1>
  <section class="card-builder--section">
    <h2 class="card-builder--section-header">
      {{svg-jar "cards" width="28px" height="28px"}}
      Featured Cards
    </h2>
    <CatalogEntries
      class="card-builder--section-grid"
      @catalogEntries={{this.model.featuredEntries}}
      data-test-featured-cards
      as |card entry|
    >
      <LinkTo
        @route="cards.card.view"
        @model={{card.canonicalURL}}
        class="card-builder--section-card-link"
        data-test-featured-card={{card.canonicalURL}}
      >
        <CardRenderer
          @card={{card}}
          @class="card-builder--section-card"
          @mode="view"
          @format="embedded"
          @preventIsolation={{true}}
          @suppressHeader={{true}}
        />
        <div
          class="card-builder--section-card-label"
          data-test-featured-card-title
        >
          {{entry.csTitle}}
        </div>
      </LinkTo>
    </CatalogEntries>
  </section>
</main>