<CardhostTopEdge @mode="view">
  <ModeSwitcher @name={{this.model.name}} @mode="view" />
</CardhostTopEdge>

<CardhostLeftEdge />

<section class="card-view" data-test-card-view={{this.model.name}}>
  <CardRenderer @card={{this.model}} @format="isolated"/>
</section>

{{!-- Hidden --}}
<section class="cardhost-card-document">
  <h3>Card Document</h3>
  <CodeBlock
    class="cardhost-card-document--codeblock"
    @code={{this.cardJson}}
    @language="javascript"
  />
</section>