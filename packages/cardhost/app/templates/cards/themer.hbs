<ThemerToolbar @closeEditor={{this.closeEditor}} />

<CardhostLeftEdge />

<section class="card-view" data-test-card-view={{this.model.name}}>
  <CardRenderer
    @card={{this.model}}
    @format="isolated"
    @cardSelected={{false}}
  />
</section>

<section class="cardhost-card-document">
  <h3>Card Document</h3>
  <CodeEditor
    @code={{this.cardJson}}
    @language="json"
  />
</section>

<div data-test-editor-pane>
  <EditorPane data-test-dock-location={{this.cssModeToggle.dockLocation}}
    @model={{this.model}}
    @saveCss={{this.saveCss}}
    @updateCode={{this.updateCode}}
  />
</div>

<style id="card-styles" data-test-view-css>
  {{scope-css this.model.isolatedCss this.model.name}}
</style>