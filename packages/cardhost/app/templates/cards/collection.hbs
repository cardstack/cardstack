{{#if this.model.org}}
  <OrgHeader
    @id={{this.model.org.id}}
    @title={{this.model.org.title}}
    @logoURL={{this.model.org.logoURL}}
    @bgColor={{this.model.org.brandColor}}
  >
    <li>
      <LinkTo @route="cards.collection" @model={{this.model.org.id}}>
        {{this.model.title}}
      </LinkTo>
    </li>
  </OrgHeader>
{{/if}}

<div class="collection__wrapper">
  <IsolatedCollection
    @mode="view"
    @title={{this.model.title}}
    @collection={{this.model.cards}}
  />
</div>