{{#if this.model.currentOrg}}
  <OrgHeader
    @id={{this.model.currentOrg.id}}
    @title={{this.model.currentOrg.title}}
    @logoURL={{this.model.currentOrg.logoURL}}
    @bgColor={{this.model.currentOrg.brandColor}}
  >
    <li>
      <LinkTo @route="cards.collection" @model={{this.model.currentOrg.id}}>
        {{if (eq this.model.id "master-recordings") "Masters" (humanize this.model.id)}}
      </LinkTo>
    </li>
  </OrgHeader>
{{/if}}

<div class="collection__wrapper">
  <IsolatedCollection
    @mode="view"
    @title={{humanize this.model.id}}
    @collection={{this.model.cards}}
  />
</div>