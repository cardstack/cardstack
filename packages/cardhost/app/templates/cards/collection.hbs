{{#if this.model.org}}
  <OrgHeader @org={{this.model.org}}>
    <li>
      <LinkTo @route="cards.collection.view" @model={{this.model.org.collection}} data-test-org-header-link={{this.model.org.collection}}>
        {{if (eq this.model.org.collection "master-recording") "Masters" (or this.model.org.collectionTitle (humanize this.model.org.collection))}}
      </LinkTo>
    </li>
  </OrgHeader>
{{/if}}

<div class="collection__wrapper">
  {{outlet}}
</div>