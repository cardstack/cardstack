{{#if this.model.org}}
  <OrgHeader @org={{this.model.org}}>
    <li>
      <LinkTo @route="cards.collection" @model={{this.model.org.id}} data-test-org-header-link={{this.model.id}}>
        {{if (eq this.model.id "master-recording") "Masters" (or this.model.org.collectionTitle (humanize this.model.id))}}
      </LinkTo>
    </li>
  </OrgHeader>
{{/if}}

<div class="collection__wrapper">
  <IsolatedCollection
    @mode="view"
    @title={{or this.model.org.collectionTitle (humanize this.model.id)}}
    @collection={{this.model.cards}}
  />
</div>