{{#if this.model.org}}
  <OrgHeader
    @id={{this.model.org.id}}
    @title={{this.model.org.title}}
    @logoURL={{this.model.org.logoURL}}
    @bgColor={{this.model.org.brandColor}}
  >
    <li>
      <LinkTo @route="cards.collection" @models={{array this.model.org.id this.model.id}} data-test-org-header-link={{this.model.id}}>
        {{if (eq this.model.id "master-recordings") "Masters" (humanize this.model.id)}}
      </LinkTo>
    </li>
  </OrgHeader>
{{/if}}

<div class="collection__wrapper">
  <IsolatedCollection
    @mode="view"
    @title={{humanize this.model.id}}
    @collection={{this.model.cards}}
  />
</div>