{{#if (get content field)}}
  <div class="cards-editor--input-row">
    <span>{{cs-humanize (cs-model-type (get content field))}} (ID: {{get (get content field) "id"}}) </span>
    {{#if enabled}}
      <button
        data-test-delete-card
        class="text-button"
        onclick={{action "deleteCard"}}
      >
        Delete
      </button>
    {{/if}}
  </div>
{{else}}
  <div class="cards-editor--input-row">
    <span data-test-no-content>No Card Selected</span>
  </div>
{{/if}}

{{!-- TODO: replace these with liquid-if when we fix jQuery problem --}}
{{#if enabled rules=animationRules growDuration=250}}
  <div class="cards-editor--button-panel">
    <button data-test-add-card onclick={{action "pickCard"}}>{{if (get content field) "Change Card" "Add Card"}}</button>
  </div>
{{/if}}
