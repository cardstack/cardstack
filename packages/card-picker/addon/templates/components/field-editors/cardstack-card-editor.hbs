{{#if (get content field)}}
  <div class="cards-editor--input-row">
    <span>{{cs-humanize (cs-model-type (get content field))}} (ID: {{get (get content field) 'id'}}) </span>
    {{#if enabled}}
      <button class="text-button" onclick={{action "deleteCard"}}>
        Delete
      </button>
    {{/if}}
  </div>
{{else}}
  <div class="cards-editor--input-row">
    <span>No Card Selected</span>
  </div>
{{/if}}

{{#liquid-if enabled rules=animationRules growDuration=250}}
  <div class="cards-editor--button-panel">
    <button onclick={{action "pickCard"}}>{{if (get content field) "Change Card" "Add Card"}}</button>
  </div>
{{/liquid-if}}
