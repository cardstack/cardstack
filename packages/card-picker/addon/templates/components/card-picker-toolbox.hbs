<div class="heading">
  {{cardstack-query-editor query=query update=(action (mut query))}}
</div>

<div class="cards-list">
  {{#cardstack-search query=query as |content|}}
    <div onclick={{action 'select' content}}>
      {{cardstack-content format="embedded" content=content}}
    </div>
  {{/cardstack-search}}
</div>
