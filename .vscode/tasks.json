{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc --watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "applyTo": "allDocuments"
      },
      "presentation": {
        "panel": "new"
      },
      "group": "build",
      "isBackground": true,
      "runOptions": {
        "runOn":"folderOpen"
      }
    }
  ]
}
