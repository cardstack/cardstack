{
  "name": "cardstack",
  "version": "0.0.0",
  "description": "Cardstack suite for ambitious applications.",
  "repository": "https://github.com/cardstack/cardstack",
  "author": "Edward Faulkner <edward@eaf4.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 7.7"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "11.13.8",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "chai": "^3.5.0",
    "eslint": "^5.8.0",
    "eslint-plugin-ember": "^5.0.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^5.2.1",
    "glob": "^7.1.2",
    "lerna": "3.16.4",
    "mocha": "^5.2.0",
    "typescript": "3.4.5"
  },
  "scripts": {
    "clean": "git clean -x -f",
    "compile": "tsc",
    "prepare": "npm run compile",
    "test": "npm run lint:deps && npm run lint:js && npm run node-tests && npm run ember-tests && npm run truffle-tests",
    "node-tests": "mocha ./packages/test-support/bin/run.js --timeout 10000",
    "lint:deps": "node scripts/find-bad-deps.js",
    "lint:js": "eslint . --cache --ignore-path .gitignore --ext=js,ts",
    "ember-tests": "node packages/test-support/ember-test-runner.js packages",
    "truffle-tests": "HUB_ENVIRONMENT=test LOG_LEVELS='*=warn' node packages/test-support/truffle-test-runner.js",
    "server": "node packages/hub/bin/server.js",
    "blockchain": "truffle develop"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "volta": {
    "node": "10.16.3"
  }
}