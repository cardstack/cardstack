{
  "include": ["./packages/**/*.ts", "./packages/**/*.js", "./scripts/**/*.js", "./cards/**/*.ts", "packages/cardhost/app/router.s" ],
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "Node",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": [
    "node_modules",
    "packages/*/tmp",
    "packages/*/dist",
    "packages/*/node_modules",
    "cards/*/tmp",
    "cards/*/dist",
    "tmp",
  ]
}